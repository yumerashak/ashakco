---
/**
 * ProductFooter.astro (Max On The Island Edition)
 */
const year = new Date().getFullYear();
---

<style>
  .foot {
    border-top: 1px solid #232536;
    background: #0B0C12;
    color: #EDEDF7;
    margin-top: 40px;
  }
  .inner {
    max-width: 1200px; margin: 0 auto; padding: 24px 20px;
    display: grid; gap: 20px;
  }
  /* 3 Columns layout matches content better */
  @media (min-width: 900px) {
    .inner { grid-template-columns: 1.5fr 1fr 1fr; }
  }

  h4 {
    margin: 0 0 8px;
    font-family: 'Pixelify Sans', sans-serif;
    font-weight: 700; font-size: 16px;
  }
  
  a { color: #EDEDF7; opacity: .9; text-decoration: none; }
  a:hover { text-decoration: underline; opacity: 1; }

  .brand {
    display: flex; align-items: center; gap: 10px;
    font-weight: 700; margin-bottom: 8px;
    font-family: 'Pixelify Sans', sans-serif;
  }
  /* Product logo specific style */
  .brand img {
    width: 32px; height: 32px;
    border-radius: 8px; object-fit: cover;
    border: 1px solid rgba(255,255,255,0.1);
  }

  ul { list-style: none; margin: 0; padding: 0; display: grid; gap: 6px; }
  
  .copy {
    border-top: 1px solid #232536;
    margin-top: 8px; padding-top: 10px;
    font-size: 13px; opacity: .7;
    grid-column: 1 / -1;
    font-family: ui-sans-serif, system-ui; /* Copy genelde düz font okunur */
  }

  .social { display: flex; gap: 10px; margin-top: 8px; }

  /* Icon Styles (Matches Header) */
  .icon { width: 16px; height: 16px; display: block; color: #EDEDF7; opacity: .85; }
  .icon--stroke { stroke: currentColor; fill: none; }
  .icon--stroke * { fill: none; }
  .icon--fill { fill: currentColor; }
</style>

<footer class="foot" id="contact">
  <div class="inner">
    
    <!-- Column 1: Product Brand & Socials -->
    <section>
      <div class="brand">
        <img src="/assets/maxontheislandlogo.png" alt="Max On The Island Logo" />
        <span>Max On The Island</span>
      </div>
      <p style="max-width: 46ch; opacity: .85; font-size: 14px; line-height: 1.6;">
        Solve Puzzles • Progress • Escape the Island — a story-driven adventure.
      </p>
      
      <div class="social" aria-label="Socials">
        <a href="https://www.instagram.com/ashak.co/" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
          <svg class="icon icon--stroke" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <circle cx="17.5" cy="6.5" r="1.25"></circle>
          </svg>
        </a>
        <a href="https://www.youtube.com/@ashakstudios" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
          <svg class="icon icon--fill" viewBox="0 0 24 24">
            <path d="M23.5 6.2a3 3 0 0 0-2.1-2.1C19.3 3.5 12 3.5 12 3.5s-7.3 0-9.4.6A3 3 0 0 0 .5 6.2 31 31 0 0 0 0 12a31 31 0 0 0 .6 5.8 3 3 0 0 0 2.1 2.1c2.2.6 9.3.6 9.3.6s7.3 0 9.4-.6a3 3 0 0 0 2.1-2.1 31 31 0 0 0 .5-5.8 31 31 0 0 0-.6-5.8ZM9.8 15.3V8.7L15.7 12z"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Column 2: Company Links -->
    <section>
      <h4>Company</h4>
      <ul>
        <li><a href="/#about">About</a></li>
        <li><a href="/careers">Careers</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </section>

    <!-- Column 3: Legal & Support -->
    <section>
      <h4>Legal & Support</h4>
      <ul>
        <li><a href="/maxontheisland/legal#privacy">Privacy Policy</a></li>
        <li><a href="/maxontheisland/legal#terms">Terms of Service</a></li>
        <li><a href="mailto:contact@ashak.co">Support</a></li>
      </ul>
    </section>

    <div class="copy">© {year} Max On The Island. All rights reserved.</div>
  </div>
</footer>