    <section id="about">
      <h4>Contact</h4>
      <ul>
        <li><a href="mailto:contact@ashak.co">contact@ashak.co</a></li>
        <li><a href="/maxontheisland/legal#privacy">Privacy</a></li>
        <li><a href="/maxontheisland/legal#terms">Terms</a></li>

      </ul>
    </section>

    <div class="copy">© {new Date().getFullYear()} Max on the Island. All rights reserved.</div>
  </div>
</footer>
