      </div>
    </section>

    <section>
      <h4>Company</h4>
      <ul>
        <li><a href="/#about">About</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/careers">Careers</a></li>
      </ul>
    </section>

