---
/* PexaFooter.astro */
const year = new Date().getFullYear();
---

<style>
  .foot {
    border-top: 1px solid #232536;
    background: #0B0C12;
    color: #EDEDF7;
    margin-top: 40px;
    font-family: 'Inter', sans-serif;
  }
  .inner {
    max-width: 1200px; margin: 0 auto; padding: 40px 24px;
    display: grid; gap: 30px;
  }
  /* 3 Columns layout */
  @media (min-width: 900px) {
    .inner { grid-template-columns: 1.5fr 1fr 1fr; }
  }

  h4 {
    margin: 0 0 16px;
    font-family: 'Pixelify Sans', sans-serif;
    font-weight: 700; font-size: 16px;
    color: #fff;
  }
  
  a { color: #9ca3af; text-decoration: none; font-size: 14px; transition: 0.2s; }
  a:hover { color: #fff; text-decoration: underline; }

  .brand {
    display: flex; align-items: center; gap: 12px;
    font-weight: 700; margin-bottom: 12px;
    font-family: 'Pixelify Sans', sans-serif;
    font-size: 20px;
    color: #fff;
  }
  /* Pexa Icon Style */
  .brand img {
    width: 36px; height: 36px;
    border-radius: 10px; object-fit: cover;
    border: 1px solid rgba(255,255,255,0.1);
  }

  ul { list-style: none; margin: 0; padding: 0; display: flex; flex-direction: column; gap: 10px; }
  
  .copy {
    border-top: 1px solid #232536;
    margin-top: 20px; padding-top: 20px;
    font-size: 13px; color: #52525b;
    grid-column: 1 / -1;
  }

  .social { display: flex; gap: 12px; margin-top: 16px; }

  /* Icon Styles */
  .icon { width: 20px; height: 20px; display: block; color: #9ca3af; transition: 0.2s; }
  .icon:hover { color: #fff; }
  .icon--stroke { stroke: currentColor; fill: none; }
  .icon--stroke * { fill: none; }
  .icon--fill { fill: currentColor; }
</style>

<footer class="foot" id="contact">
  <div class="inner">
    
    <!-- Column 1: Pexa Brand & Description -->
    <section>
      <div class="brand">
        <img src="/assets/pexa-icon.png" alt="Pexa Logo" />
        <span>PEXA</span>
      </div>
      <p style="max-width: 40ch; color: #9ca3af; font-size: 14px; line-height: 1.6;">
        Advanced AI Image Generation. Transform your ideas into professional visuals in seconds.
      </p>
      
      <div class="social" aria-label="Socials">
        <a href="https://www.instagram.com/ashak.co/" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
          <svg class="icon icon--stroke" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <circle cx="17.5" cy="6.5" r="1.25"></circle>
          </svg>
        </a>
        <a href="https://www.youtube.com/@ashakstudios" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
          <svg class="icon icon--fill" viewBox="0 0 24 24">
            <path d="M23.5 6.2a3 3 0 0 0-2.1-2.1C19.3 3.5 12 3.5 12 3.5s-7.3 0-9.4.6A3 3 0 0 0 .5 6.2 31 31 0 0 0 0 12a31 31 0 0 0 .6 5.8 3 3 0 0 0 2.1 2.1c2.2.6 9.3.6 9.3.6s7.3 0 9.4-.6a3 3 0 0 0 2.1-2.1 31 31 0 0 0 .5-5.8 31 31 0 0 0-.6-5.8ZM9.8 15.3V8.7L15.7 12z"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Column 2: Studio Links -->
    <section>
      <h4>Studio</h4>
      <ul>
        <li><a href="/">Ashak Studios Home</a></li>
        <li><a href="/#apps">More Apps</a></li>
        <li><a href="/contact">Contact Support</a></li>
      </ul>
    </section>

    <!-- Column 3: Legal -->
    <section>
      <h4>Legal</h4>
      <ul>
        <li><a href="/pexa/legal#privacy">Privacy Policy</a></li>
        <li><a href="/pexa/legal#terms">Terms of Service</a></li>
        <li><a href="mailto:contact@ashak.co">Report Issue</a></li>
      </ul>
    </section>

    <div class="copy">Â© {year} Pexa AI. All rights reserved. Crafted by Ashak Studios.</div>
  </div>
</footer>