---
/* CompanyHeader.astro */
const links = [
  { href: "/",       label: "Home" },
  { href: "/#apps",  label: "Games" },
  { href: "/#about", label: "Studio" },
  { href: "/contact", label: "Contact" },
];
---
<style>
  :root {
    --header-bg: rgba(3, 3, 4, 0.8);
    --header-border: rgba(255, 255, 255, 0.08);
    --accent: #8D46E7;
    --text-main: #ffffff;
  }

  .topbar {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--header-bg);
    backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--header-border);
    transition: all 0.3s ease;
  }

  .inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 12px 24px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    column-gap: 12px;
  }

  /* --- BRAND LOGO --- */
  .brand {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    transition: opacity 0.2s;
  }
  .brand:hover { opacity: 0.8; }
  
  .brand img {
    height: 40px;
    width: auto; /* Oranı koruması için auto */
    max-width: 120px; 
    object-fit: contain;
    display: block;
  }

  /* --- NAVIGATION (Center) --- */
  .nav {
    display: none;
    gap: 8px;
    align-items: center;
    justify-self: center;
    background: rgba(255,255,255,0.03);
    padding: 6px;
    border-radius: 100px;
    border: 1px solid rgba(255,255,255,0.05);
  }

  .nav-link {
    font-family: 'Pixelify Sans', sans-serif;
    font-size: 15px;
    font-weight: 500;
    color: #a1a1aa;
    text-decoration: none;
    padding: 8px 20px;
    border-radius: 100px;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #fff;
    background: rgba(255,255,255,0.08);
    text-shadow: 0 0 10px rgba(255,255,255,0.3);
  }

  /* --- SOCIALS (Right) --- */
  .social {
    display: none; 
    gap: 12px; 
    justify-self: end;
    align-items: center;
  }
  
  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px; height: 36px;
    border-radius: 50%;
    background: transparent;
    color: #a1a1aa;
    transition: all 0.2s;
    border: 1px solid transparent;
  }

  .social-btn:hover {
    color: var(--accent);
    background: rgba(141, 70, 231, 0.1);
    border-color: rgba(141, 70, 231, 0.2);
    box-shadow: 0 0 15px rgba(141, 70, 231, 0.3);
  }

  .icon { width: 18px; height: 18px; display: block; }
  .icon--stroke { stroke: currentColor; fill: none; }
  .icon--stroke * { fill: none; }
  .icon--fill { fill: currentColor; }

  /* Responsive */
  @media (min-width: 960px) {
    .nav { display: flex; }
    .social { display: flex; }
  }
</style>

<header class="topbar">
  <div class="inner">
    
    <!-- Left: Logo -->
    <a class="brand" href="/" aria-label="Home">
      <img src="/assets/companylogo2.png" alt="Ashak Studios" />
    </a>

    <!-- Center: Navigation -->
    <nav class="nav" aria-label="Main menu">
      {links.map(l => (
        <a href={l.href} class="nav-link">{l.label}</a>
      ))}
    </nav>

    <!-- Right: Socials -->
    <div class="social" aria-label="Social links">
      <!-- Instagram -->
      <a href="https://www.instagram.com/ashak.co/" class="social-btn" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
        <svg class="icon icon--stroke" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <circle cx="17.5" cy="6.5" r="1.25"></circle>
        </svg>
      </a>

      <!-- YouTube -->
      <a href="https://www.youtube.com/@ashakstudios" class="social-btn" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
        <svg class="icon icon--fill" viewBox="0 0 24 24">
          <path d="M23.5 6.2a3 3 0 0 0-2.1-2.1C19.3 3.5 12 3.5 12 3.5s-7.3 0-9.4.6A3 3 0 0 0 .5 6.2 31 31 0 0 0 0 12a31 31 0 0 0 .6 5.8 3 3 0 0 0 2.1 2.1c2.2.6 9.3.6 9.3.6s7.3 0 9.4-.6a3 3 0 0 0 2.1-2.1 31 31 0 0 0 .5-5.8 31 31 0 0 0-.6-5.8ZM9.8 15.3V8.7L15.7 12z"/>
        </svg>
      </a>
    </div>

  </div>
</header>