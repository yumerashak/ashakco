---
/* CompanyHeader.astro — NAV centered, no underline, IG stroke, FB/YT fill */
const links = [
  { href: "/",       label: "Home" },
  { href: "/#apps",  label: "Apps" },
  { href: "/#about", label: "About Us" },
  { href: "/contact", label: "Contact" },
];
---
<style>
  /* All typography: Pixelify Sans */
  :root { --ff: 'Pixelify Sans', ui-sans-serif, system-ui; }

  .topbar{
    position:sticky; top:0; z-index:50;
    background:rgba(5,5,7,.72); backdrop-filter:blur(10px);
    border-bottom:1px solid #232536;
  }

  /* Grid: [logo] [CENTERED NAV] [social] */
  .inner{
    max-width:1200px; margin:0 auto; padding:8px 20px;
    display:grid; grid-template-columns: 1fr auto 1fr;
    align-items:center; column-gap:12px;
    font-family:var(--ff);
  }

  /* Brand link: logo only, NO text */
  .brand,
  .brand:link,
  .brand:visited{
    color:#EDEDF7; text-decoration:none;
  }
  .brand{
    display:flex; align-items:center; gap:10px;
  }
  /* width sabitleme yok; yükseklik referans */
  .brand img{
    height: 40px;      /* istediğin header yüksekliği */
    width: 80px;       /* ORANI KORU */
    object-fit: contain;
    border-radius: 0px;
    display: block;
  }
  /* NAV centered; underline off */
  .nav{
    display:none; gap:18px; align-items:center;
    justify-self:center;
  }
  .nav a,
  .nav a:link,
  .nav a:visited{
    font:600 14px var(--ff);
    color:#EDEDF7; opacity:.95; text-decoration:none;
  }
  .nav a:hover,
  .nav a:focus{ text-decoration:none; opacity:1 }
  .nav a:focus-visible{
    outline:2px solid rgba(141,70,231,.55);
    outline-offset:2px; border-radius:6px;
  }

  /* Social icons on the right */
  .social{
    display:none; gap:10px; justify-self:end;
  }
  .social a{ display:inline-flex; align-items:center; text-decoration:none }

  /* ICON STYLES — separate stroke and fill classes */
  .icon{ width:16px; height:16px; display:block; color:#EDEDF7 }
  .icon--stroke{ stroke:currentColor; fill:none }
  .icon--stroke *{ fill:none }
  .icon--fill{ fill:currentColor }

  @media (min-width:960px){
    .nav{ display:flex }
    .social{ display:flex }
  }
</style>

<header class="topbar">
  <div class="inner">
    <!-- Left: Logo (no text) -->
    <a class="brand" href="/" aria-label="Home">
      <img src="/assets/companylogo.png" alt="Ashak Studios" />
    </a>

    <!-- Center: NAV -->
    <nav class="nav" aria-label="Main menu">
      {links.map(l => <a href={l.href}>{l.label}</a>)}
    </nav>

    <!-- Right: Socials -->
    <div class="social" aria-label="Social links">
      <!-- Instagram: stroke -->
      <a href="https://www.instagram.com/ashak.co/" aria-label="Instagram" title="Instagram" target="_blank" rel="noopener noreferrer">
        <svg class="icon icon--stroke"
             viewBox="0 0 24 24"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round"
             aria-hidden="true">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <circle cx="17.5" cy="6.5" r="1.25"></circle>
        </svg>
      </a>

      <!-- YouTube: fill -->
      <a href="https://www.youtube.com/@ashakstudios" aria-label="YouTube" title="YouTube" target="_blank" rel="noopener noreferrer">
        <svg class="icon icon--fill" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M23.5 6.2a3 3 0 0 0-2.1-2.1C19.3 3.5 12 3.5 12 3.5s-7.3 0-9.4.6A3 3 0 0 0 .5 6.2 31 31 0 0 0 0 12a31 31 0 0 0 .6 5.8 3 3 0 0 0 2.1 2.1c2.2.6 9.3.6 9.3.6s7.3 0 9.4-.6a3 3 0 0 0 2.1-2.1 31 31 0 0 0 .5-5.8 31 31 0 0 0-.6-5.8ZM9.8 15.3V8.7L15.7 12z"/>
        </svg>
      </a>
    </div>
  </div>
</header>