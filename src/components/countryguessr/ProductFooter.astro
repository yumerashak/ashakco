---
/**
 * ProductFooter.astro
 * Props:
 *  - productName?: string  (default: "CountryGuessr")
 *  - logoSrc?: string      (default: "/assets/countryguessr-icon.png")
 */
const {
  productName = "CountryGuessr",
  logoSrc = "/assets/countryguessr-icon.png",
} = Astro.props;
const year = new Date().getFullYear();
---

<style>
  .foot {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    background: #030304; /* Deepest dark */
    color: #ededf7;
    margin-top: auto; /* Sayfa kısaysa alta iter */
    padding-top: 60px;
    padding-bottom: 40px;
    font-family: 'Inter', sans-serif;
    position: relative;
    z-index: 10;
  }

  .inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    display: grid;
    gap: 40px;
  }

  @media (min-width: 900px) {
    .inner {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
  }

  /* HEADINGS */
  h4 {
    margin: 0 0 16px;
    font-family: 'Pixelify Sans', sans-serif;
    font-weight: 700;
    font-size: 18px;
    color: #fff;
    letter-spacing: 0.5px;
  }

  /* LINKS */
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 10px;
  }
  
  .footer-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.2s ease;
    display: inline-block;
  }
  .footer-link:hover {
    color: #fff;
    transform: translateX(4px);
    text-shadow: 0 0 8px rgba(255,255,255,0.4);
  }

  /* BRAND SECTION */
  .brand-area {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .brand-head {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .brand-head img {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    object-fit: cover;
    border: 1px solid rgba(255,255,255,0.1);
  }
  .brand-name {
    font-family: 'Pixelify Sans', sans-serif;
    font-size: 20px;
    color: #fff;
  }
  .tagline {
    font-size: 14px;
    color: #9ca3af;
    line-height: 1.6;
    max-width: 320px;
  }

  /* SOCIAL ROW */
  .social-row {
    display: flex;
    gap: 12px;
    margin-top: 4px;
  }
  .social-icon {
    width: 36px; height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255,255,255,0.03);
    border: 1px solid rgba(255,255,255,0.1);
    color: #ccc;
    transition: all 0.2s;
  }
  .social-icon:hover {
    background: #8D46E7;
    border-color: #8D46E7;
    color: #fff;
    box-shadow: 0 0 15px rgba(141, 70, 231, 0.5);
  }

  /* COPYRIGHT */
  .copy {
    border-top: 1px solid rgba(255,255,255,0.05);
    margin-top: 40px;
    padding-top: 20px;
    font-size: 12px;
    color: #52525b;
    text-align: center;
  }
</style>

<footer class="foot">
  <div class="inner">
    
    <!-- Column 1: Brand & Desc -->
    <section class="brand-area">
      <div class="brand-head">
        <img src={logoSrc} alt={`${productName} Logo`} loading="lazy" />
        <span class="brand-name">{productName}</span>
      </div>
      <p class="tagline">
        Experience the next level of mobile gaming. 
        Crafted with passion, optimized for fun.
      </p>
      
      <div class="social-row" aria-label="Socials">
        <a href="https://www.instagram.com/ashak.co/" class="social-icon" aria-label="Instagram" target="_blank">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><circle cx="17.5" cy="6.5" r="1.25"></circle></svg>
        </a>
        <a href="https://www.youtube.com/@ashakstudios" class="social-icon" aria-label="YouTube" target="_blank">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M23.5 6.2a3 3 0 0 0-2.1-2.1C19.3 3.5 12 3.5 12 3.5s-7.3 0-9.4.6A3 3 0 0 0 .5 6.2 31 31 0 0 0 0 12a31 31 0 0 0 .6 5.8 3 3 0 0 0 2.1 2.1c2.2.6 9.3.6 9.3.6s7.3 0 9.4-.6a3 3 0 0 0 2.1-2.1 31 31 0 0 0 .5-5.8 31 31 0 0 0-.6-5.8ZM9.8 15.3V8.7L15.7 12z"/></svg>
        </a>
      </div>
    </section>

    <!-- Column 2: Studio Links -->
    <section>
      <h4>Studio</h4>
      <ul>
        <li><a class="footer-link" href="/#about">About Us</a></li>
        <li><a class="footer-link" href="/careers">Careers</a></li>
        <li><a class="footer-link" href="/contact">Contact</a></li>
      </ul>
    </section>

    <!-- Column 3: Legal -->
    <section>
      <h4>Legal</h4>
      <ul>
        <!-- Not: Ürün sayfaları genellikle /product/legal altına bakabilir, 
             burada genel legal sayfasına yönlendirmek daha güvenlidir. -->
        <li><a class="footer-link" href="/legal#privacy">Privacy Policy</a></li>
        <li><a class="footer-link" href="/legal#terms">Terms of Use</a></li>
        <li><a class="footer-link" href="mailto:contact@ashak.co">Support</a></li>
      </ul>
    </section>

  </div>

  <div class="inner">
    <div class="copy">
      © {year} {productName}. A product of Ashak Studios. All rights reserved.
    </div>
  </div>
</footer>