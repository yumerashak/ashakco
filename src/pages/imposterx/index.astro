---
import Header from "../../components/company/CompanyHeader.astro";
import Footer from "../../components/company/CompanyFooter.astro";

/** Feature content */
interface Section {
  img: string;
  title: string;
  text: string;
  caption?: string;
  tags?: string[];
}

const sections: Section[] = [
  {
    img: "/assets/imposterx-ss-1.jpg",
    title: "Roles Assigned",
    text: "One secret Imposter. The rest are Crew. The Crew gets a secret word, but the Imposter sees nothing. Let the paranoia begin.",
    caption: "Trust No One",
    tags: ["Secret Roles", "Mystery", "Start"]
  },
  {
    img: "/assets/imposterx-ss-2.jpg",
    title: "Give Clues",
    text: "Go around the circle. Give a one-word clue related to the secret topic. Be vague enough to hide from the Imposter, but clear enough to prove you know the word.",
    caption: "Don't reveal too much",
    tags: ["Word Game", "Strategy", "Bluffing"]
  },
  {
    img: "/assets/imposterx-ss-3.jpg",
    title: "Spot the Fake",
    text: "The Imposter must blend in giving a clue without knowing the topic. Watch for hesitation. Listen for clues that don't quite fit.",
    caption: "Analyze Behavior",
    tags: ["Deduction", "Social", "Observation"]
  },
  {
    img: "/assets/imposterx-ss-4.jpg",
    title: "The Vote",
    text: "Discuss, accuse, and vote. If the Crew finds the Imposter, they win. If they vote out an innocent, the Imposter wins.",
    caption: "Elimination Round",
    tags: ["Voting", "Debate", "Win"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ImposterX | Ashak Studios</title>
    <meta name="description" content="ImposterX — Find the impostor. Outsmart the crew. The ultimate party game." />
    <meta name="theme-color" content="#FDFBF7" />
    <link rel="icon" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <style>
      /* --- GLOBAL VARIABLES (Ashak Studios Theme) --- */
      :root {
        --color-bg: #FDFBF7;
        --color-text-main: #2C2420;
        --color-text-muted: #6B635E;
        
        --color-primary: #8C6A5D; /* Bronz */
        --color-primary-dark: #6D5248;
        
        --color-card-bg: #FFFFFF;
        --color-border: #E6DFD5;
        
        --shadow-lg: 0 15px 30px -5px rgba(44, 36, 32, 0.1);
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--color-bg);
        color: var(--color-text-main);
        font-family: 'Lato', sans-serif;
        -webkit-font-smoothing: antialiased;
        line-height: 1.6;
      }

      h1, h2, h3, h4 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        color: var(--color-text-main);
      }

      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 100px 0 80px;
        text-align: center;
        background: radial-gradient(circle at top, #F5F0E6 0%, #FDFBF7 70%);
        border-bottom: 1px solid #E6DFD5;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .app-icon {
        width: 120px; height: 120px;
        border-radius: 24px;
        box-shadow: var(--shadow-lg);
        border: 1px solid #E6DFD5;
        margin-bottom: 24px;
        background-color: #fff;
        object-fit: cover;
      }

      .hero h1 {
        font-size: clamp(42px, 6vw, 72px);
        margin: 0 0 16px;
        color: #1A1410;
        letter-spacing: -0.5px;
      }

      .kicker {
        font-size: 18px;
        color: var(--color-text-muted);
        margin-bottom: 32px;
        font-weight: 400;
        max-width: 600px;
      }

      /* STORES */
      .stores {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-bottom: 40px;
      }
      .store-btn img { height: 44px; width: auto; transition: transform 0.2s; }
      .store-btn:hover img { transform: translateY(-2px); }

      /* --- FEATURES SECTION --- */
      .features-section { padding: 100px 0; }

      .feature-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
        margin-bottom: 120px;
      }
      .feature-row:last-child { margin-bottom: 0; }
      
      .feature-row.reverse .text-col { order: 2; }
      .feature-row.reverse .img-col { order: 1; }

      @media (max-width: 900px) {
        .feature-row, .feature-row.reverse { grid-template-columns: 1fr; text-align: center; gap: 40px; margin-bottom: 100px; }
        .feature-row.reverse .text-col { order: 0; }
        .feature-row.reverse .img-col { order: 1; }
        .bullets { justify-content: center; }
        .caption { justify-content: center; }
      }

      /* Text Column */
      .caption {
        font-family: 'Lato', sans-serif;
        font-size: 12px;
        color: var(--color-primary);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .caption::before {
        content:''; display: block; width: 30px; height: 1px;
        background: var(--color-primary);
      }
      @media (max-width: 900px) { .caption::before { display: none; } }

      .text-col h3 {
        font-size: 36px;
        margin: 0 0 20px 0;
        line-height: 1.2;
      }
      
      .text-col p {
        font-size: 16px;
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: 24px;
      }

      /* Tags */
      .bullets { display: flex; flex-wrap: wrap; gap: 10px; }
      .chip {
        font-family: 'Lato', sans-serif;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 6px 14px;
        border-radius: 4px;
        background: #F5F0E6;
        color: #7D7065;
        border: 1px solid #E6DFD5;
      }

      /* Image Column (Clean Frame) */
      .img-col { position: relative; }
      
      .device-frame {
        position: relative;
        border-radius: 24px;
        overflow: hidden;
        border: 6px solid #FFFFFF;
        background: #000;
        box-shadow: 
          0 0 0 1px #E6DFD5,
          var(--shadow-lg);
        aspect-ratio: 9/19.5; /* Portrait */
        max-width: 320px;
        margin: 0 auto;
        transition: transform 0.4s ease;
      }
      
      .device-frame:hover {
        transform: translateY(-8px);
      }
      
      .device-frame img { width: 100%; height: 100%; object-fit: cover; display: block; }

      /* --- RULES SECTION (Elegant Card) --- */
      .rules-section { padding-bottom: 100px; }
      
      .rules-card {
        background: #FFFFFF;
        border: 1px solid #E6DFD5;
        border-radius: 8px;
        padding: 60px;
        box-shadow: var(--shadow-lg);
      }

      .rules-title {
        text-align: center;
        font-size: 32px;
        margin-bottom: 40px;
        padding-bottom: 24px;
        border-bottom: 1px solid #F0EBE3;
      }

      .rules-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 32px;
      }

      .rule-item {
        display: flex;
        gap: 16px;
        align-items: flex-start;
      }

      .rule-num {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        color: var(--color-primary);
        font-weight: 700;
        line-height: 1;
        opacity: 0.5;
      }

      .rule-text {
        font-size: 15px;
        color: var(--color-text-main);
        line-height: 1.6;
      }

      .rule-text strong {
        color: #2C2420;
        font-weight: 700;
      }

    </style>
  </head>

  <body>

    <Header />

    <section class="hero">
      <div class="container">
        <img src="/assets/imposterx-icon.jpg" alt="ImposterX Logo" class="app-icon" />
        
        <h1>ImposterX</h1>
        <p class="kicker">Find the Imposter • Outsmart the Crew</p>

        <div class="stores">
          <a href="#" class="store-btn"><img src="/assets/appstore.png" alt="Download on App Store" /></a>
          <a href="#" class="store-btn"><img src="/assets/googleplay.png" alt="Get it on Google Play" /></a>
        </div>
      </div>
    </section>

    <main class="container features-section">
      {sections.map((s, i) => (
        <div class={`feature-row ${i % 2 !== 0 ? 'reverse' : ''}`}>
          
          <div class="text-col">
            <div class="caption">{s.caption}</div>
            <h3>{s.title}</h3>
            <p>{s.text}</p>
            {s.tags && (
              <div class="bullets">
                {s.tags.map(t => <span class="chip">{t}</span>)}
              </div>
            )}
          </div>

          <div class="img-col">
            <div class="device-frame">
              <img src={s.img} alt={s.title} loading="lazy" />
            </div>
          </div>

        </div>
      ))}
    </main>

    <section class="container rules-section">
      <div class="rules-card">
        <h2 class="rules-title">Game Rules</h2>
        <div class="rules-grid">
          
          <div class="rule-item">
            <div class="rule-num">01</div>
            <div class="rule-text">One player is the <strong>IMPOSTER</strong>. Everyone else is <strong>CREW</strong>.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">02</div>
            <div class="rule-text">The Crew sees a secret word. The Imposter sees nothing but must pretend they know it.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">03</div>
            <div class="rule-text">Each player says <strong>one word</strong> as a clue. Be vague enough to hide from the Imposter, but clear enough for the Crew.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">04</div>
            <div class="rule-text">The Imposter must blend in and give a clue without knowing the topic.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">05</div>
            <div class="rule-text"><strong>The Vote.</strong> If the Crew identifies the Imposter, they win. If they vote out an innocent, the Imposter wins.</div>
          </div>

        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>