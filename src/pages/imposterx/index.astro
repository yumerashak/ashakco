---
import ProductHeader from "../../components/imposterxproduct/ProductHeader.astro";
import ProductFooter from "../../components/imposterxproduct/ProductFooter.astro";

/** Feature content (Screenshots mapped to features) */
interface Section {
  img: string;
  title: string;
  text: string;
  caption?: string;
  tags?: string[];
}

const sections: Section[] = [
  {
    img: "/assets/imposterx-ss-1.jpg",
    title: "Roles Assigned",
    text: "One secret Imposter. The rest are Crew. The Crew gets a secret word, but the Imposter sees nothing. Let the paranoia begin.",
    caption: "Trust No One.",
    tags: ["Secret Roles", "Mystery", "Start"]
  },
  {
    img: "/assets/imposterx-ss-2.jpg",
    title: "Give Clues",
    text: "Go around the circle. Give a one-word clue related to the secret topic. Be vague enough to hide from the Imposter, but clear enough to prove you know the word.",
    caption: "Don't reveal too much.",
    tags: ["Word Game", "Strategy", "Bluffing"]
  },
  {
    img: "/assets/imposterx-ss-3.jpg",
    title: "Spot the Fake",
    text: "The Imposter must blend in giving a clue without knowing the topic. Watch for hesitation. Listen for clues that don't quite fit.",
    caption: "Analyze Behavior.",
    tags: ["Deduction", "Social", "Observation"]
  },
  {
    img: "/assets/imposterx-ss-4.jpg",
    title: "The Vote",
    text: "Discuss, accuse, and vote. If the Crew finds the Imposter, they win. If they vote out an innocent, the Imposter wins.",
    caption: "Elimination Round.",
    tags: ["Voting", "Debate", "Win"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ImposterX • Ashak Studios</title>
    <meta name="description" content="ImposterX — Find the impostor. Outsmart the crew. The ultimate party game." />
    <meta name="theme-color" content="#E94D4D" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts: Luckiest Guy for Headlines (Game Vibe), Inter for Body -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <!-- Social -->
    <meta property="og:title" content="ImposterX" />
    <meta property="og:description" content="Find the impostor. Outsmart the crew." />
    <meta property="og:image" content="/assets/imposterx-icon.jpg" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <style>
      /* --- CORE VARIABLES --- */
      :root {
        --bg-dark: #050507;
        --imposter-red: #E94D4D;
        --crew-green: #2F9E44;
        --text-main: #ffffff;
        --text-muted: #9ca3af;
        --card-bg: rgba(20, 20, 28, 0.6);
        --card-border: rgba(255, 255, 255, 0.08);
        --radius: 24px;
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--bg-dark);
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
      }

      /* Game Headers use Luckiest Guy */
      h1, h2, h3, .game-font {
        font-family: 'Luckiest Guy', cursive;
        letter-spacing: 1px;
      }

      /* --- BACKGROUND FX (Red vs Green) --- */
      .background-fx {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
        background: radial-gradient(circle at 50% 0%, #1a1115 0%, #050507 70%);
        overflow: hidden;
      }
      .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.25;
        animation: floatOrb 10s infinite alternate ease-in-out;
      }
      /* Imposter Orb */
      .orb-1 { width: 600px; height: 600px; background: var(--imposter-red); top: -10%; right: -10%; }
      /* Crew Orb */
      .orb-2 { width: 500px; height: 500px; background: var(--crew-green); bottom: 0%; left: -10%; animation-delay: -3s; }

      @keyframes floatOrb {
        0% { transform: translate(0, 0); }
        100% { transform: translate(40px, 40px); }
      }

      /* --- LAYOUT --- */
      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
        position: relative;
        z-index: 2;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 120px 0 60px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .logo-wrap {
        position: relative;
        margin-bottom: 24px;
        animation: pulseLogo 4s ease-in-out infinite;
      }
      @keyframes pulseLogo {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.03); }
      }

      .app-icon {
        width: 120px; height: 120px;
        border-radius: 28px;
        box-shadow: 0 15px 40px rgba(233, 77, 77, 0.3); /* Red glow */
        border: 2px solid rgba(255,255,255,0.1);
      }

      .hero h1 {
        font-size: clamp(48px, 7vw, 80px);
        margin: 0;
        background: linear-gradient(180deg, #fff 0%, #ccc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 10px 30px rgba(233, 77, 77, 0.4);
      }

      .kicker {
        font-size: 20px;
        color: var(--text-muted);
        margin-top: 12px;
        font-weight: 600;
      }

      /* STORES */
      .stores {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-top: 32px;
        flex-wrap: wrap;
      }
      .store-btn {
        transition: transform 0.2s, filter 0.2s;
        display: block;
        height: 50px;
      }
      .store-btn img { height: 100%; width: auto; display: block; }
      .store-btn:hover {
        transform: translateY(-3px);
        filter: brightness(1.1);
      }

      /* --- FEATURES (ZigZag) --- */
      .features-section { padding: 80px 0; }

      .feature-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
        margin-bottom: 100px;
      }
      .feature-row:last-child { margin-bottom: 0; }
      .feature-row.reverse .text-col { order: 2; }
      .feature-row.reverse .img-col { order: 1; }

      @media (max-width: 900px) {
        .feature-row, .feature-row.reverse { grid-template-columns: 1fr; text-align: center; gap: 40px; }
        .feature-row.reverse .text-col { order: 0; }
        .feature-row.reverse .img-col { order: 1; }
        .text-col { align-items: center; }
        .bullets { justify-content: center; }
      }

      .text-col h3 {
        font-size: 32px;
        margin: 0 0 16px 0;
        color: #fff;
        text-transform: uppercase;
      }
      .caption {
        font-size: 14px;
        color: var(--imposter-red);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
        font-family: 'Inter', sans-serif;
      }
      .text-col p {
        font-size: 17px;
        color: #d1d5db;
        line-height: 1.6;
        margin-bottom: 20px;
      }

      .bullets { display: flex; flex-wrap: wrap; gap: 10px; }
      .chip {
        font-size: 13px;
        padding: 6px 14px;
        border-radius: 100px;
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.1);
        color: #fff;
        font-weight: 600;
        font-family: 'Inter', sans-serif;
      }

      /* Device Frame */
      .img-col { position: relative; }
      .device-frame {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.1);
        background: #000;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        aspect-ratio: 9/16; /* Portrait for mobile game screenshots */
        max-width: 320px;
        margin: 0 auto;
        transition: transform 0.3s ease;
      }
      .device-frame:hover {
        transform: scale(1.02) rotate(1deg);
        border-color: var(--imposter-red);
      }
      .device-frame img { width: 100%; height: 100%; object-fit: cover; display: block; }

      /* --- RULES SECTION (Card) --- */
      .rules-section { padding-bottom: 80px; }
      .rules-card {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: var(--radius);
        padding: 40px;
        backdrop-filter: blur(20px);
        position: relative;
        overflow: hidden;
      }
      /* Red glow strip on top */
      .rules-card::before {
        content:''; position:absolute; top:0; left:0; width:100%; height:4px;
        background: linear-gradient(90deg, var(--imposter-red), var(--crew-green));
      }

      .rules-title { text-align: center; font-size: 36px; margin: 0 0 30px; }

      .rules-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
      }

      .rule-item {
        display: flex;
        gap: 16px;
        align-items: flex-start;
      }
      .rule-num {
        font-family: 'Luckiest Guy', cursive;
        font-size: 24px;
        color: rgba(255,255,255,0.2);
        line-height: 1;
      }
      .rule-text {
        font-size: 15px;
        color: #ccc;
        line-height: 1.5;
      }
      .highlight-red { color: var(--imposter-red); font-weight: 700; }
      .highlight-green { color: var(--crew-green); font-weight: 700; }

      /* Animation */
      .reveal {
        opacity: 0;
        transform: translateY(30px);
        animation: revealAnim 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
      }
      @keyframes revealAnim { to { opacity: 1; transform: translateY(0); } }

    </style>
  </head>

  <body>
    
    <!-- Background FX -->
    <div class="background-fx">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
    </div>

    <ProductHeader productName="ImposterX" logoSrc="/assets/imposterx-icon.jpg" />

    <!-- HERO -->
    <section class="hero container">
      <div class="logo-wrap reveal" style="animation-delay: 0.1s;">
        <img src="/assets/imposterx-icon.jpg" alt="ImposterX Logo" class="app-icon" />
      </div>
      
      <h1 class="reveal" style="animation-delay: 0.2s;">IMPOSTER X</h1>
      <p class="kicker reveal" style="animation-delay: 0.3s;">Find the Imposter • Outsmart the Crew</p>

      <!-- Stores -->
      <div class="stores reveal" id="stores" style="animation-delay: 0.4s;">
        <a href="#" class="store-btn"><img src="/assets/appstore.png" alt="Download on App Store" /></a>
        <a href="#" class="store-btn"><img src="/assets/googleplay.png" alt="Get it on Google Play" /></a>
      </div>
    </section>

    <!-- FEATURES -->
    <main class="container features-section">
      {sections.map((s, i) => (
        <div class={`feature-row ${i % 2 !== 0 ? 'reverse' : ''} reveal`}>
          
          <div class="text-col">
            <div class="caption">{s.caption}</div>
            <h3>{s.title}</h3>
            <p>{s.text}</p>
            {s.tags && (
              <div class="bullets">
                {s.tags.map(t => <span class="chip">{t}</span>)}
              </div>
            )}
          </div>

          <div class="img-col">
            <div class="device-frame">
              <img src={s.img} alt={s.title} loading="lazy" />
            </div>
          </div>

        </div>
      ))}
    </main>

    <!-- HOW TO PLAY (Mission Protocol) -->
    <section class="container rules-section reveal">
      <div class="rules-card">
        <h2 class="rules-title">Mission Rules</h2>
        <div class="rules-grid">
          
          <div class="rule-item">
            <div class="rule-num">01</div>
            <div class="rule-text">One player is the <span class="highlight-red">IMPOSTER</span>. Everyone else is <span class="highlight-green">CREW</span>.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">02</div>
            <div class="rule-text">The <span class="highlight-green">CREW</span> sees a secret word. The <span class="highlight-red">IMPOSTER</span> sees nothing.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">03</div>
            <div class="rule-text">Each player says <strong>one word</strong> as a clue. Be vague, but not too vague.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">04</div>
            <div class="rule-text">The <span class="highlight-red">IMPOSTER</span> must blend in and give a clue without knowing the topic.</div>
          </div>

          <div class="rule-item">
            <div class="rule-num">05</div>
            <div class="rule-text"><strong>Vote!</strong> If the Crew finds the Imposter, they win. If they fail, Imposter wins.</div>
          </div>

        </div>
      </div>
    </section>

    <ProductFooter productName="ImposterX" logoSrc="/assets/imposterx-icon.jpg" />

    <!-- Scroll Reveal Script -->
    <script is:inline>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.animationPlayState = 'running';
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.reveal').forEach(el => {
        el.style.animationPlayState = 'paused';
        observer.observe(el);
      });
    </script>

  </body>
</html>