---
import Header from "../../components/company/CompanyHeader.astro";
import Footer from "../../components/company/CompanyFooter.astro";

/** Feature content */
interface Section {
  img: string;
  title: string;
  text: string;
  caption?: string;
  tags?: string[];
}

const sections: Section[] = [
  {
    img: "/assets/cityguessr-ss-1.jpg",
    title: "Urban Exploration",
    text: "Walk the streets virtually. Look at architecture, signs, and landmarks. Can you identify the city just by its vibe?",
    caption: "Virtual Tourism",
    tags: ["Street View", "Travel", "Explore"]
  },
  {
    img: "/assets/cityguessr-ss-2.jpg",
    title: "Pinpoint Precision",
    text: "Don't just guess the country. Find the exact city. Drop your pin on the map and see how close you really are.",
    caption: "High Accuracy",
    tags: ["Maps", "Accuracy", "Points"]
  },
  {
    img: "/assets/cityguessr-ss-3.jpg",
    title: "Unlock Hints",
    text: "Lost in a concrete jungle? Use hints like License Plates, Language, or famous Landmarks to get back on track.",
    caption: "Detective Mode",
    tags: ["Clues", "Landmarks", "Logic"]
  },
  {
    img: "/assets/cityguessr-ss-4.jpg",
    title: "City Collection",
    text: "From Paris to Tokyo, collect cities in your travel log. Complete challenges and become the ultimate world traveler.",
    caption: "Global Status",
    tags: ["Collection", "Achievements", "Travel"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CityGuessr | Ashak Studios</title>
    <meta name="description" content="CityGuessr — Guess the city from photos and landmarks. Play on iOS and Android." />
    <meta name="theme-color" content="#FDFBF7" />
    <link rel="icon" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <style>
      /* --- GLOBAL VARIABLES (Ashak Studios Theme) --- */
      :root {
        --color-bg: #FDFBF7;
        --color-text-main: #2C2420;
        --color-text-muted: #6B635E;
        
        --color-primary: #8C6A5D; /* Bronz */
        --color-primary-dark: #6D5248;
        
        --color-card-bg: #FFFFFF;
        --color-border: #E6DFD5;
        
        --shadow-lg: 0 15px 30px -5px rgba(44, 36, 32, 0.1);
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--color-bg);
        color: var(--color-text-main);
        font-family: 'Lato', sans-serif;
        -webkit-font-smoothing: antialiased;
        line-height: 1.6;
      }

      h1, h2, h3, h4 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        color: var(--color-text-main);
      }

      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 100px 0 80px;
        text-align: center;
        background: radial-gradient(circle at top, #F5F0E6 0%, #FDFBF7 70%);
        border-bottom: 1px solid #E6DFD5;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .app-icon {
        width: 110px; height: 110px;
        border-radius: 24px;
        box-shadow: var(--shadow-lg);
        border: 1px solid #E6DFD5;
        margin-bottom: 24px;
        background-color: #fff;
        object-fit: cover;
      }

      .hero h1 {
        font-size: clamp(42px, 6vw, 72px);
        margin: 0 0 16px;
        color: #1A1410;
        letter-spacing: -0.5px;
      }

      .kicker {
        font-size: 18px;
        color: var(--color-text-muted);
        margin-bottom: 32px;
        font-weight: 400;
        max-width: 600px;
      }

      /* STORES */
      .stores {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-bottom: 40px;
      }
      .store-btn img { height: 44px; width: auto; transition: transform 0.2s; }
      .store-btn:hover img { transform: translateY(-2px); }

      /* --- FEATURES SECTION --- */
      .features-section { padding: 100px 0; }

      .feature-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
        margin-bottom: 120px;
      }
      .feature-row:last-child { margin-bottom: 0; }
      
      .feature-row.reverse .text-col { order: 2; }
      .feature-row.reverse .img-col { order: 1; }

      @media (max-width: 900px) {
        .feature-row, .feature-row.reverse { grid-template-columns: 1fr; text-align: center; gap: 40px; margin-bottom: 100px; }
        .feature-row.reverse .text-col { order: 0; }
        .feature-row.reverse .img-col { order: 1; }
        .bullets { justify-content: center; }
        .caption { justify-content: center; }
      }

      /* Text Column */
      .caption {
        font-family: 'Lato', sans-serif;
        font-size: 12px;
        color: var(--color-primary);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .caption::before {
        content:''; display: block; width: 30px; height: 1px;
        background: var(--color-primary);
      }
      @media (max-width: 900px) { .caption::before { display: none; } }

      .text-col h3 {
        font-size: 36px;
        margin: 0 0 20px 0;
        line-height: 1.2;
      }
      
      .text-col p {
        font-size: 16px;
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: 24px;
      }

      /* Tags */
      .bullets { display: flex; flex-wrap: wrap; gap: 10px; }
      .chip {
        font-family: 'Lato', sans-serif;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 6px 14px;
        border-radius: 4px;
        background: #F5F0E6;
        color: #7D7065;
        border: 1px solid #E6DFD5;
      }

      /* Image Column (Clean Frame) */
      .img-col { position: relative; }
      
      .device-frame {
        position: relative;
        border-radius: 24px;
        overflow: hidden;
        border: 6px solid #FFFFFF;
        background: #000;
        box-shadow: 
          0 0 0 1px #E6DFD5,
          var(--shadow-lg);
        aspect-ratio: 9/19.5; /* Portrait */
        max-width: 320px;
        margin: 0 auto;
        transition: transform 0.4s ease;
      }
      
      .device-frame:hover {
        transform: translateY(-8px);
      }
      
      .device-frame img { width: 100%; height: 100%; object-fit: cover; display: block; }

    </style>
  </head>

  <body>

    <Header />

    <section class="hero">
      <div class="container">
        <img src="/assets/cityguessr-icon.png" alt="CityGuessr Logo" class="app-icon" />
        
        <h1>CityGuessr</h1>
        <p class="kicker">Guess the City • Explore the World</p>

        <div class="stores">
          <a href="#" class="store-btn"><img src="/assets/appstore.png" alt="Download on App Store" /></a>
          <a href="#" class="store-btn"><img src="/assets/googleplay.png" alt="Get it on Google Play" /></a>
        </div>
      </div>
    </section>

    <main class="container features-section">
      {sections.map((s, i) => (
        <div class={`feature-row ${i % 2 !== 0 ? 'reverse' : ''}`}>
          
          <div class="text-col">
            <div class="caption">{s.caption}</div>
            <h3>{s.title}</h3>
            <p>{s.text}</p>
            {s.tags && (
              <div class="bullets">
                {s.tags.map(t => <span class="chip">{t}</span>)}
              </div>
            )}
          </div>

          <div class="img-col">
            <div class="device-frame">
              <img src={s.img} alt={s.title} loading="lazy" />
            </div>
          </div>

        </div>
      ))}
    </main>

    <Footer />
  </body>
</html>