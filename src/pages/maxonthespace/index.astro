---
import ProductHeader from "../../components/maxonthespaceproduct/ProductHeader.astro";
import ProductFooter from "../../components/maxonthespaceproduct/ProductFooter.astro";

/** YouTube trailer ID (ID only) */
const trailerId = "P5oZCecDsI0";

/** Feature content */
interface Section {
  img: string;
  title: string;
  text: string;
  caption?: string;
  tags?: string[];
}
const sections: Section[] = [
  {
    img: "/assets/space-screenshot-4.png",
    title: "Play Anywhere",
    text: "Tablet, phone… playable on every device. Original visuals and a user-friendly design.",
    caption: "Play on iOS and Android — access from anywhere.",
    tags: ["Mobile", "Accessible", "Interface"]
  },
  {
    img: "/assets/space-screenshot-3.png",
    title: "Explore the Cosmos",
    text: "Max is adrift in space. Hop between planets, encounter aliens, and dock with space shuttles — every level is a new adventure.",
    caption: "Puzzle-focused progression, environmental storytelling.",
    tags: ["Planets", "Aliens", "Shuttles"]
  },
  {
    img: "/assets/space-screenshot-2.png",
    title: "Progress with Hints",
    text: "Stuck? Hints point you in the right direction. Timing, gravity, and decisions matter.",
    caption: "The right move, at the right moment.",
    tags: ["Gravity", "Reflexes", "Hints"]
  },
  {
    img: "/assets/space-screenshot-1.png",
    title: "Experience in 15 Languages",
    text: "A fantastic experience in 15 languages. Play in any language you like.",
    caption: "Accessibility through localization.",
    tags: ["15 Languages", "Localization", "Accessible"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Max On The Space • Product Page</title>
    <meta name="description" content="Max On The Space — Solve puzzles, progress, and explore space!" />
    <meta name="theme-color" content="#8D46E7" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Pixelify Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Social -->
    <meta property="og:title" content="Max On The Space" />
    <meta property="og:description" content="Explore, craft, fight. Space awaits." />
    <meta property="og:image" content="assets/presskit-cover.png" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <style>
      :root{
        --bg:#050507; --bg-2:#0C0D12;
        --panel:#0F1016; --panel-2:#131521;
        --text:#F2F2F7; --muted:#B8B9C8; --line:#232536;
        --brand:#8D46E7; --brand-2:#2F4CB3;
        --radius:16px; --shadow:0 10px 30px rgba(0,0,0,.45);
      }
      *{box-sizing:border-box}
      html,body{
        margin:0; padding:0; background:radial-gradient(1200px 400px at 50% -10%, #121327 0%, transparent 60%), var(--bg);
        color:var(--text); font:16px/1.7 'Pixelify Sans', ui-sans-serif, system-ui;
        scroll-behavior:smooth;
      }
      a{color:inherit;text-decoration:none}
      img{display:block;max-width:100%;height:auto}
      .container{max-width:1100px;margin:0 auto;padding:0 16px}
      .section{padding:48px 0}
      .heading-1{font-weight:700;letter-spacing:.2px;font-size:clamp(24px,3.2vw,40px);line-height:1.15;margin:0}
      .kicker{color:var(--muted);font-weight:500;font-size:14px}
      .panel{
        background:linear-gradient(180deg,var(--panel),var(--panel-2));
        border:1px solid var(--line); border-radius:var(--radius); box-shadow:var(--shadow);
      }
      .btn{
        display:inline-flex;align-items:center;justify-content:center;gap:8px;
        height:44px;padding:0 16px;border-radius:999px;
        border:1px solid #2B2E44;background:linear-gradient(180deg,#1A1C2A,#121422);
        color:#fff;cursor:pointer;font-weight:600;box-shadow:0 8px 24px rgba(0,0,0,.25);
      }
      .btn-primary{
        border-color:#4331B8;background:linear-gradient(180deg,#795CFF,#5A41E3);
        box-shadow:0 12px 30px rgba(109,86,249,.35);
      }
      /* HERO */
      .hero{padding:68px 0 28px}
      .logo-row{display:flex;justify-content:center;margin-bottom:12px}
      .logo{height:90px;width:auto;border-radius:14px;filter:drop-shadow(0 8px 24px rgba(0,0,0,.35))}
      .video-wrap{margin-top:36px;border-radius:18px;overflow:hidden;position:relative;border:1px solid #2E3150;box-shadow:0 20px 60px rgba(0,0,0,.45);max-width:990px;margin-left:auto;margin-right:auto}
      .video-inner{aspect-ratio:1920 / 886;background:#000;position:relative}
      .video-inner iframe{position:absolute;inset:0;width:100%;height:100%;border:0}
      .sep{height:1px;background:linear-gradient(90deg,transparent,#262944,transparent);margin:8px auto 0;max-width:1100px}
      /* Stores */
      .stores{display:flex;gap:1px;justify-content:center;flex-wrap:wrap;margin-top:12px}
      .stores a{display:flex;align-items:center;justify-content:center;width:220px;height:64px;border-radius:12px}
      .stores a img{max-width:100%;max-height:100%;display:block;object-fit:contain}
      /* Features */
      .features-wrap{max-width:1100px;margin:0 auto}
      .feat{display:grid;gap:24px;align-items:center;margin-bottom:32px;grid-template-columns: 1fr}
      @media (min-width: 1000px){.feat{grid-template-columns: 1fr 1fr}}
      .media{position:relative;border-radius:18px;overflow:hidden;border:1px solid #2C2E45;background:#0A0B12;box-shadow: 0 20px 60px rgba(0,0,0,.45)}
      .img-wrap{position: relative;overflow: hidden;aspect-ratio:16/9;background:#0b0d15;display:grid;place-items:center}
      .img-wrap::before{content:"";position:absolute;inset:0;background-image: var(--bg);background-size: cover;background-position: center;filter: blur(24px) saturate(1.1);transform: scale(1.06);z-index:0}
      .img-wrap img{width:100%;height:100%;object-fit:contain;position:relative;z-index:1}
      .content .caption{display:inline-flex;gap:8px;align-items:center;font-size:13px;color:#B8B9C8}
      .content h3{font-size:clamp(20px,2.2vw,28px);font-weight:700;margin:8px 0 8px}
      .content p{font-weight:500;color:#DCDDED;margin:0 0 10px}
      .bullets{display:flex;gap:10px;flex-wrap:wrap;margin-top:12px}
      .chip{font-size:13px;padding:6px 10px;border-radius:999px;border:1px solid #2D3050;background:#12142A;color:#E7E7F4;font-weight:600}
    </style>
  </head>

  <body>
    <ProductHeader productName="Max On The Space" />

    <!-- HERO -->
    <section class="hero">
      <div class="container">
        <div class="logo-row">
          <img src="/assets/maxonthespacelogo.png" alt="Max On The Space" class="logo" loading="eager" />
        </div>
        <h1 class="heading-1" style="text-align:center">Max On The Space</h1>
        <p class="kicker" style="text-align:center">Solve Puzzles • Progress • Explore Space</p>

        <!-- Store buttons -->
        <div class="stores" id="stores">
          <a href="#"><img src="/assets/appstore.png" alt="App Store" /></a>
          <a href="#"><img src="/assets/googleplay.png" alt="Google Play" /></a>
        </div>

        <!-- YouTube trailer -->
        <div class="video-wrap container">
          <div class="video-inner">
            <iframe
              src={`https://www.youtube.com/embed/${trailerId}?rel=0&modestbranding=1&color=white`}
              title="Max On The Space Trailer"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
      <div class="sep"></div>
    </section>

    <!-- FEATURES -->
    <main id="features" class="container">
      <section class="section features-wrap">
        {
          sections.map((s, i) => (
            <div class="feat">
              { i % 2 === 0 ? (
                <>
                  <figure class="media" style="order:0">
                    <div class="img-wrap" style={`--bg: url('${s.img}')`}>
                      <img src={s.img} alt={s.title} loading={i===0 ? "eager" : "lazy"} />
                    </div>
                  </figure>
                  <div class="content" style="order:1">
                    {s.caption && <span class="caption">✨ {s.caption}</span>}
                    <h3>{s.title}</h3>
                    <p>{s.text}</p>
                    {s.tags && (
                      <div class="bullets">
                        {s.tags.map((t) => <span class="chip">{t}</span>)}
                      </div>
                    )}
                  </div>
                </>
              ) : (
                <>
                  <div class="content" style="order:0">
                    {s.caption && <span class="caption">✨ {s.caption}</span>}
                    <h3>{s.title}</h3>
                    <p>{s.text}</p>
                    {s.tags && (
                      <div class="bullets">
                        {s.tags.map((t) => <span class="chip">{t}</span>)}
                      </div>
                    )}
                  </div>
                  <figure class="media" style="order:1">
                    <div class="img-wrap" style={`--bg: url('${s.img}')`}>
                      <img src={s.img} alt={s.title} loading="lazy" />
                    </div>
                  </figure>
                </>
              )}
            </div>
          ))
        }
      </section>
    </main>

    <ProductFooter productName="Max On The Space" />
  </body>
</html>
