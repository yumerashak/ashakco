---
import ProductHeader from "../../components/maxonthespaceproduct/ProductHeader.astro";
import ProductFooter from "../../components/maxonthespaceproduct/ProductFooter.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Max On The Space • Coming Soon</title>
    <meta name="description" content="Max On The Space — A brand-new adventure in space. Coming soon." />
    <meta name="theme-color" content="#2F4CB3" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Pixelify Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <style>
      :root{
        --bg:#050507; --panel:#0F1016; --panel-2:#131521; --text:#F2F2F7; --line:#232536;
      }
      *{box-sizing:border-box}
      html,body{ margin:0; padding:0; background:radial-gradient(1200px 400px at 50% -10%, #101225 0%, transparent 60%), var(--bg); color:var(--text); font:16px/1.7 'Pixelify Sans', ui-sans-serif, system-ui }
      .container{max-width:900px;margin:0 auto;padding:0 16px}
      .hero{padding:80px 0 60px;text-align:center}
      .title{font-weight:700;letter-spacing:.2px;font-size:clamp(26px,3vw,40px);line-height:1.15;margin:0}
      .sub{opacity:.9;margin:8px 0 0}
      .panel{
        margin:26px auto 0;max-width:560px;background:linear-gradient(180deg,var(--panel),var(--panel-2));
        border:1px solid var(--line); border-radius:16px; padding:14px; display:flex; gap:8px
      }
      input[type="email"]{ flex:1; padding:10px 12px; border-radius:10px; border:1px solid #2B2E44; background:#0B0C12; color:#fff; font:600 14px system-ui }
      .btn{ padding:10px 14px; border-radius:10px; border:1px solid #2B2E44; background:linear-gradient(180deg,#1A1C2A,#121422); color:#fff; font:700 14px; cursor:pointer }
      .note{font-size:13px;opacity:.75;margin-top:8px}
    </style>
  </head>
  <body>
    <ProductHeader productName="Max On The Space" links={[{ href:"/#", label:"Preview" }]} />

    <section class="hero">
      <div class="container">
        <h1 class="title">Max On The Space</h1>
        <p class="sub">A space-themed new adventure — <strong>coming soon</strong>.</p>

        <form class="panel" onsubmit="alert('Thanks! We will notify you when it launches.'); return false;">
          <input type="email" placeholder="Your email address" required />
          <button class="btn" type="submit">Notify me</button>
        </form>
        <div class="note">Your email stays private. No spam.</div>
      </div>
    </section>

    <ProductFooter productName="Max On The Space" />
  </body>
</html>
