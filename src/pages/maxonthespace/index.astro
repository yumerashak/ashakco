---
import ProductHeader from "../../components/maxonthespaceproduct/ProductHeader.astro";
import ProductFooter from "../../components/maxonthespaceproduct/ProductFooter.astro";

/** YouTube trailer ID (ID only) */
const trailerId = "P5oZCecDsI0";

/** Feature content */
interface Section {
  img: string;
  title: string;
  text: string;
  caption?: string;
  tags?: string[];
}
const sections: Section[] = [
  {
    img: "/assets/space-screenshot-4.png",
    title: "Play Anywhere",
    text: "Whether on tablet or phone, the universe fits in your pocket. Experience original visuals and a user-friendly design optimized for touch.",
    caption: "Cross-platform mastery.",
    tags: ["Mobile", "Accessible", "Touch UI"]
  },
  {
    img: "/assets/space-screenshot-3.png",
    title: "Explore the Cosmos",
    text: "Max is adrift in the infinite void. Hop between planets, encounter strange aliens, and dock with mysterious shuttles. Every level is a new frontier.",
    caption: "A journey beyond stars.",
    tags: ["Planets", "Aliens", "Adventure"]
  },
  {
    img: "/assets/space-screenshot-2.png",
    title: "Master Gravity",
    text: "Stuck in orbit? Use smart hints to find your path. Timing, gravity mechanics, and critical decisions are key to survival.",
    caption: "Physics-based puzzles.",
    tags: ["Gravity", "Reflexes", "Logic"]
  },
  {
    img: "/assets/space-screenshot-1.png",
    title: "Global Odyssey",
    text: "Space speaks every language. Enjoy a fully localized experience in 15 languages. Play in your native tongue.",
    caption: "No barriers.",
    tags: ["15 Languages", "Localization", "Global"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Max On The Space • Ashak Studios</title>
    <meta name="description" content="Max On The Space — Solve puzzles, progress, and explore space!" />
    <meta name="theme-color" content="#8D46E7" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;500;700&family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Social -->
    <meta property="og:title" content="Max On The Space" />
    <meta property="og:description" content="Explore, craft, fight. Space awaits." />
    <meta property="og:image" content="/assets/presskit-cover.png" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <style>
      /* --- CORE VARIABLES & RESET --- */
      :root {
        --bg-dark: #030304;
        --accent-primary: #8D46E7;
        --accent-secondary: #5A41E3;
        --text-main: #ffffff;
        --text-muted: #9ca3af;
        --card-bg: rgba(20, 20, 28, 0.6);
        --card-border: rgba(255, 255, 255, 0.08);
        --radius: 24px;
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--bg-dark);
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
      }

      h1, h2, h3, .brand-font {
        font-family: 'Pixelify Sans', sans-serif;
      }

      /* --- BACKGROUND FX --- */
      .background-fx {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
        background: radial-gradient(circle at 50% 0%, #1a112c 0%, #030304 70%);
        overflow: hidden;
      }
      .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(90px);
        opacity: 0.35;
        animation: floatOrb 12s infinite alternate ease-in-out;
      }
      .orb-1 { width: 600px; height: 600px; background: var(--accent-primary); top: -20%; left: 10%; }
      .orb-2 { width: 400px; height: 400px; background: var(--accent-secondary); bottom: 10%; right: -10%; animation-delay: -4s; }

      @keyframes floatOrb {
        0% { transform: translate(0, 0); }
        100% { transform: translate(30px, 50px); }
      }

      /* --- LAYOUT --- */
      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
        position: relative;
        z-index: 2;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 120px 0 60px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .logo-wrap {
        position: relative;
        margin-bottom: 24px;
        animation: floatLogo 6s ease-in-out infinite;
      }
      @keyframes floatLogo {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }

      .app-icon {
        width: 100px; height: 100px;
        border-radius: 22px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(255,255,255,0.1);
      }

      .hero h1 {
        font-size: clamp(40px, 6vw, 64px);
        margin: 0;
        background: linear-gradient(180deg, #fff 0%, #a5a5a5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 30px rgba(141, 70, 231, 0.3);
        line-height: 1.1;
      }

      .kicker {
        font-size: 18px;
        color: var(--text-muted);
        margin-top: 16px;
        font-weight: 500;
        letter-spacing: 0.5px;
      }

      /* STORES */
      .stores {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-top: 32px;
        flex-wrap: wrap;
      }
      .store-btn {
        transition: transform 0.2s, filter 0.2s;
        display: block;
        height: 50px;
      }
      .store-btn img { height: 100%; width: auto; display: block; }
      .store-btn:hover {
        transform: translateY(-3px);
        filter: brightness(1.1);
      }

      /* VIDEO CONTAINER */
      .video-frame {
        margin-top: 60px;
        width: 100%;
        max-width: 960px;
        aspect-ratio: 16/9;
        border-radius: 24px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.1);
        box-shadow: 0 20px 60px rgba(0,0,0,0.6);
        background: #000;
        position: relative;
      }
      .video-frame iframe {
        width: 100%; height: 100%; border: none;
      }

      /* --- FEATURES SECTION (ZigZag) --- */
      .features-section {
        padding: 80px 0;
      }

      .feature-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
        margin-bottom: 100px;
      }
      .feature-row:last-child { margin-bottom: 0; }
      
      /* Alternate Order */
      .feature-row.reverse .text-col { order: 2; }
      .feature-row.reverse .img-col { order: 1; }

      @media (max-width: 900px) {
        .feature-row, .feature-row.reverse {
          grid-template-columns: 1fr;
          gap: 40px;
          text-align: center;
        }
        .feature-row.reverse .text-col { order: 0; } /* Text always first on mobile */
        .feature-row.reverse .img-col { order: 1; }
        .text-col { align-items: center; }
        .bullets { justify-content: center; }
      }

      /* Text Column */
      .text-col {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      
      .caption {
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--accent-primary);
        font-weight: 700;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .caption::before {
        content:''; display:block; width:20px; height:2px; background:var(--accent-primary);
      }

      .text-col h3 {
        font-size: 36px;
        margin: 0 0 16px 0;
        color: #fff;
        line-height: 1.1;
      }

      .text-col p {
        font-size: 16px;
        color: #d1d5db;
        line-height: 1.7;
        margin-bottom: 24px;
      }

      .bullets {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }
      .chip {
        font-size: 13px;
        padding: 6px 14px;
        border-radius: 100px;
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.1);
        color: #ccc;
        font-weight: 600;
      }

      /* Image Column (Device Frame) */
      .img-col {
        position: relative;
      }
      
      .device-frame {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.1);
        background: #000;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        aspect-ratio: 16/9;
        transition: transform 0.3s ease;
      }
      
      .device-frame:hover {
        transform: scale(1.02);
        border-color: var(--accent-primary);
      }

      /* Image inside with blur effect behind */
      .img-bg {
        position: absolute;
        inset: 0;
        background-size: cover;
        background-position: center;
        filter: blur(30px) brightness(0.6);
        transform: scale(1.2);
        z-index: 1;
      }
      .device-frame img {
        position: relative;
        z-index: 2;
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
      }

      /* Reveal Animation */
      .reveal {
        opacity: 0;
        transform: translateY(30px);
        animation: revealAnim 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
      }
      @keyframes revealAnim {
        to { opacity: 1; transform: translateY(0); }
      }

    </style>
  </head>

  <body>
    
    <!-- Background FX -->
    <div class="background-fx">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
    </div>

    <ProductHeader productName="Max On The Space" logoSrc="/assets/max-on-the-space-icon.png" />

    <!-- HERO -->
    <section class="hero container">
      <div class="logo-wrap reveal" style="animation-delay: 0.1s;">
        <img src="/assets/max-on-the-space-icon.png" alt="Max On The Space" class="app-icon" />
      </div>
      
      <h1 class="reveal" style="animation-delay: 0.2s;">MAX ON THE SPACE</h1>
      <p class="kicker reveal" style="animation-delay: 0.3s;">Solve Puzzles • Progress • Explore the Void</p>

      <!-- Stores -->
      <div class="stores reveal" id="stores" style="animation-delay: 0.4s;">
        <a href="#" class="store-btn"><img src="/assets/appstore.png" alt="Download on App Store" /></a>
        <a href="#" class="store-btn"><img src="/assets/googleplay.png" alt="Get it on Google Play" /></a>
      </div>

      <!-- Trailer -->
      <div class="video-frame reveal" style="animation-delay: 0.5s;">
        <iframe
          src={`https://www.youtube.com/embed/${trailerId}?rel=0&modestbranding=1&controls=1&showinfo=0`}
          title="Game Trailer"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </section>

    <!-- FEATURES -->
    <main class="container features-section">
      {sections.map((s, i) => (
        <div class={`feature-row ${i % 2 !== 0 ? 'reverse' : ''} reveal`}>
          
          <!-- Text Side -->
          <div class="text-col">
            <div class="caption">{s.caption || "Feature"}</div>
            <h3>{s.title}</h3>
            <p>{s.text}</p>
            {s.tags && (
              <div class="bullets">
                {s.tags.map(t => <span class="chip">{t}</span>)}
              </div>
            )}
          </div>

          <!-- Image Side -->
          <div class="img-col">
            <div class="device-frame">
              <div class="img-bg" style={`background-image: url('${s.img}')`}></div>
              <img src={s.img} alt={s.title} loading="lazy" />
            </div>
          </div>

        </div>
      ))}
    </main>

    <ProductFooter productName="Max On The Space" logoSrc="/assets/max-on-the-space-icon.png" />

    <!-- Scroll Reveal Script -->
    <script is:inline>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.animationPlayState = 'running';
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.reveal').forEach(el => {
        el.style.animationPlayState = 'paused'; // Başlangıçta durdur
        observer.observe(el);
      });
    </script>

  </body>
</html>