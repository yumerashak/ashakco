---
import Header from "../../components/company/CompanyHeader.astro";
import Footer from "../../components/company/CompanyFooter.astro";

/** YouTube trailer ID (ID only) */
const trailerId = "uFnMAWKRzus";

/** Feature content */
interface Section {
  img: string;
  title: string;
  text: string;
  caption?: string;
  tags?: string[];
}

const sections: Section[] = [
  {
    img: "/assets/screenshot-4.png",
    title: "Play Anywhere",
    text: "Tablet, phone… playable on every device. Original visuals and a user-friendly design optimized for touch controls.",
    caption: "Seamless Cross-Platform",
    tags: ["Mobile", "Accessible", "Interface"]
  },
  {
    img: "/assets/screenshot-3.PNG",
    title: "Escape the Island",
    text: "Max is stranded. The Island is full of mysteries, traps, and puzzles. Help him escape. Every level is a new adventure.",
    caption: "Survival & Logic",
    tags: ["Story", "Escape", "Levels"]
  },
  {
    img: "/assets/screenshot-2.PNG",
    title: "Progress with Hints",
    text: "Stuck on a puzzle? Hints point you in the right direction. Timing, reflexes, and smart decisions matter.",
    caption: "Master the mechanics",
    tags: ["Timing", "Reflexes", "Hints"]
  },
  {
    img: "/assets/screenshot-1.PNG",
    title: "Global Experience",
    text: "A fantastic experience in 82 languages. Play in your native language, no matter where you are.",
    caption: "No Language Barriers",
    tags: ["82 Languages", "Localization", "Accessible"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Max On The Island | Ashak Studios</title>
    <meta name="description" content="Max On The Island — Solve puzzles, progress, and escape the Island!" />
    <meta name="theme-color" content="#FDFBF7" />
    <link rel="icon" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <style>
      /* --- GLOBAL VARIABLES (Ashak Studios Theme) --- */
      :root {
        --color-bg: #FDFBF7;
        --color-text-main: #2C2420;
        --color-text-muted: #6B635E;
        
        --color-primary: #8C6A5D; /* Bronz */
        --color-primary-dark: #6D5248;
        
        --color-card-bg: #FFFFFF;
        --color-border: #E6DFD5;
        
        --shadow-lg: 0 15px 30px -5px rgba(44, 36, 32, 0.1);
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--color-bg);
        color: var(--color-text-main);
        font-family: 'Lato', sans-serif;
        -webkit-font-smoothing: antialiased;
        line-height: 1.6;
      }

      h1, h2, h3 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        color: var(--color-text-main);
      }

      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 100px 0 80px;
        text-align: center;
        background: radial-gradient(circle at top, #F5F0E6 0%, #FDFBF7 70%);
        border-bottom: 1px solid #E6DFD5;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .app-icon {
        width: 100px; height: 100px;
        border-radius: 20px;
        box-shadow: var(--shadow-lg);
        border: 1px solid #E6DFD5;
        margin-bottom: 24px;
        background-color: #fff;
      }

      .hero h1 {
        font-size: clamp(36px, 5vw, 64px);
        margin: 0 0 16px;
        color: #1A1410;
        letter-spacing: -0.5px;
      }

      .kicker {
        font-size: 18px;
        color: var(--color-text-muted);
        margin-bottom: 32px;
        font-weight: 400;
        max-width: 600px;
      }

      /* STORES */
      .stores {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-bottom: 60px;
      }
      .store-btn img { height: 44px; width: auto; transition: transform 0.2s; }
      .store-btn:hover img { transform: translateY(-2px); }

      /* VIDEO CONTAINER (Elegant) */
      .video-frame {
        width: 100%;
        max-width: 800px;
        aspect-ratio: 16/9;
        border-radius: 12px;
        overflow: hidden;
        border: 4px solid #FFFFFF;
        box-shadow: 
          0 0 0 1px #E6DFD5,
          var(--shadow-lg);
        background: #000;
        margin: 0 auto;
      }
      .video-frame iframe {
        width: 100%; height: 100%; border: none;
      }

      /* --- FEATURES SECTION --- */
      .features-section { padding: 100px 0; }

      .feature-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
        margin-bottom: 120px;
      }
      .feature-row:last-child { margin-bottom: 0; }
      
      .feature-row.reverse .text-col { order: 2; }
      .feature-row.reverse .img-col { order: 1; }

      @media (max-width: 900px) {
        .feature-row, .feature-row.reverse { grid-template-columns: 1fr; text-align: center; gap: 40px; margin-bottom: 100px; }
        .feature-row.reverse .text-col { order: 0; }
        .feature-row.reverse .img-col { order: 1; }
        .bullets { justify-content: center; }
        .caption { justify-content: center; }
      }

      /* Text Column */
      .caption {
        font-family: 'Lato', sans-serif;
        font-size: 12px;
        color: var(--color-primary);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .caption::before {
        content:''; display: block; width: 30px; height: 1px;
        background: var(--color-primary);
      }
      @media (max-width: 900px) { .caption::before { display: none; } }

      .text-col h3 {
        font-size: 36px;
        margin: 0 0 20px 0;
        line-height: 1.2;
      }
      
      .text-col p {
        font-size: 16px;
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: 24px;
      }

      /* Tags */
      .bullets { display: flex; flex-wrap: wrap; gap: 10px; }
      .chip {
        font-family: 'Lato', sans-serif;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 6px 14px;
        border-radius: 4px;
        background: #F5F0E6;
        color: #7D7065;
        border: 1px solid #E6DFD5;
      }

      /* Image Column */
      .img-col { position: relative; }
      
      .device-frame {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        border: 6px solid #FFFFFF;
        background: #000;
        box-shadow: 
          0 0 0 1px #E6DFD5,
          var(--shadow-lg);
        aspect-ratio: 16/9; /* Standard screenshot ratio */
        transition: transform 0.4s ease;
      }
      
      .device-frame:hover {
        transform: translateY(-4px);
      }
      
      .device-frame img { width: 100%; height: 100%; object-fit: cover; display: block; }

    </style>
  </head>

  <body>

    <Header />

    <section class="hero">
      <div class="container">
        <img src="/assets/maxontheislandlogo.png" alt="Max On The Island" class="app-icon" />
        
        <h1>Max On The Island</h1>
        <p class="kicker">Solve Puzzles • Progress • Escape</p>

        <div class="stores">
          <a href="#" class="store-btn"><img src="/assets/appstore.png" alt="Download on App Store" /></a>
          <a href="#" class="store-btn"><img src="/assets/googleplay.png" alt="Get it on Google Play" /></a>
        </div>

        <div class="video-frame">
          <iframe
            src={`https://www.youtube.com/embed/${trailerId}?rel=0&modestbranding=1&controls=1&showinfo=0`}
            title="Max On The Island Trailer"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </section>

    <main class="container features-section">
      {sections.map((s, i) => (
        <div class={`feature-row ${i % 2 !== 0 ? 'reverse' : ''}`}>
          
          <div class="text-col">
            <div class="caption">{s.caption}</div>
            <h3>{s.title}</h3>
            <p>{s.text}</p>
            {s.tags && (
              <div class="bullets">
                {s.tags.map(t => <span class="chip">{t}</span>)}
              </div>
            )}
          </div>

          <div class="img-col">
            <div class="device-frame">
              <img src={s.img} alt={s.title} loading="lazy" />
            </div>
          </div>

        </div>
      ))}
    </main>

    <Footer />
  </body>
</html>