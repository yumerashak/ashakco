---
import Header from "../../components/company/CompanyHeader.astro";
import Footer from "../../components/company/CompanyFooter.astro";

/** Feature Content Interface */
interface Section {
  img: string;
  title: string;
  text: string;
  caption: string;
  tags?: string[];
}

/* Word Chain X Özellikleri - Sadece 3 Ana Madde */
const sections: Section[] = [
  {
    img: "/assets/wordchain-ss-1.png",
    title: "Master the Chain",
    text: "It’s not just a crossword. Every word you solve unlocks the next step in the chain. Keep your logic sharp as you navigate through progressively challenging levels.",
    caption: "Core Gameplay",
    tags: ["Word Puzzle", "Chain Logic", "Brain Training"]
  },
  {
    img: "/assets/wordchain-ss-2.png",
    title: "Hit the Multipliers",
    text: "Discover hidden multiplier tiles behind the letters. Trigger x2, x5, or even x10 bonuses to skyrocket your score and dominate the daily rankings.",
    caption: "High Stakes Scoring",
    tags: ["x10 Bonus", "Score Boost", "Strategy"]
  },
  {
    img: "/assets/wordchain-ss-3.png",
    title: "Keep the Flame Alive",
    text: "Consistency is key. Build your winning streak to ignite the flame. The longer you play without errors, the more rewards and prestige you earn.",
    caption: "Streak System",
    tags: ["Winning Streak", "Daily Challenges", "Rewards"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Word Chain X | Ashak Studios</title>
    <meta name="description" content="Word Chain X — A stimulating word association experience designed to test vocabulary and cognitive flexibility." />
    <meta name="theme-color" content="#FDFBF7" />
    <link rel="icon" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <style>
      /* --- GLOBAL VARIABLES (Ashak Studios Theme) --- */
      :root {
        --color-bg: #FDFBF7;
        --color-text-main: #2C2420;
        --color-text-muted: #6B635E;
        
        --color-primary: #8C6A5D; /* Bronz */
        --color-primary-dark: #6D5248;
        
        --color-card-bg: #FFFFFF;
        --color-border: #E6DFD5;
        
        --shadow-lg: 0 15px 30px -5px rgba(44, 36, 32, 0.1);
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--color-bg);
        color: var(--color-text-main);
        font-family: 'Lato', sans-serif;
        -webkit-font-smoothing: antialiased;
        line-height: 1.6;
      }

      h1, h2, h3 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        color: var(--color-text-main);
      }

      /* --- LAYOUT UTILS --- */
      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 120px 0 100px;
        text-align: center;
        background: radial-gradient(circle at top, #F5F0E6 0%, #FDFBF7 70%);
        border-bottom: 1px solid #E6DFD5;
      }

      .app-icon {
        width: 120px; height: 120px;
        border-radius: 24px;
        border: 1px solid #E6DFD5; 
        box-shadow: var(--shadow-lg);
        margin-bottom: 32px;
        background-color: #fff;
        object-fit: cover;
      }

      .hero h1 {
        font-size: clamp(42px, 6vw, 72px);
        line-height: 1.1;
        margin: 0 0 24px;
        color: #1A1410;
      }

      .kicker {
        font-size: 20px;
        color: var(--color-text-muted);
        max-width: 580px;
        margin: 0 auto 40px;
        font-weight: 300;
      }

      .btn-download {
        display: inline-flex;
        align-items: center;
        background: #000;
        color: #fff;
        padding: 10px 24px;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s;
      }
      .btn-download:hover { transform: translateY(-2px); }
      .btn-download img { height: 32px; width: auto; }

      /* --- FEATURES SECTION --- */
      .features-section { padding: 100px 0; }

      .feature-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
        margin-bottom: 140px;
      }
      .feature-row:last-child { margin-bottom: 0; }
      
      /* Sıralamayı ters çevirmek için */
      .feature-row.reverse .text-col { order: 2; }
      .feature-row.reverse .img-col { order: 1; }

      @media (max-width: 900px) {
        .feature-row, .feature-row.reverse { grid-template-columns: 1fr; text-align: center; gap: 40px; margin-bottom: 100px; }
        .feature-row.reverse .text-col { order: 0; }
        .feature-row.reverse .img-col { order: 1; }
        .bullets { justify-content: center; }
        .caption { justify-content: center; }
      }

      /* Text Column */
      .caption {
        font-family: 'Lato', sans-serif;
        font-size: 12px;
        color: var(--color-primary);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .caption::before {
        content:''; display: block; width: 30px; height: 1px;
        background: var(--color-primary);
      }
      @media (max-width: 900px) { .caption::before { display: none; } }

      .text-col h3 {
        font-size: 38px;
        margin: 0 0 20px 0;
        line-height: 1.2;
      }
      
      .text-col p {
        font-size: 17px;
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: 32px;
      }

      /* Tags */
      .bullets { display: flex; flex-wrap: wrap; gap: 10px; }
      .chip {
        font-family: 'Lato', sans-serif;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 6px 14px;
        border-radius: 4px; /* Köşeli */
        background: #F5F0E6;
        color: #7D7065;
        border: 1px solid #E6DFD5;
      }

      /* Image Column (Device Frame - Elegant) */
      .img-col { position: relative; }
      
      .device-frame {
        position: relative;
        border-radius: 24px;
        overflow: hidden;
        border: 6px solid #FFFFFF;
        background: #000;
        box-shadow: 
          0 0 0 1px #E6DFD5, /* Outer thin border */
          var(--shadow-lg);
        aspect-ratio: 9/19.5; 
        max-width: 320px;
        margin: 0 auto;
        transition: transform 0.4s ease;
      }

      .device-frame:hover {
        transform: translateY(-8px);
      }
      
      .device-frame img { width: 100%; height: 100%; object-fit: cover; display: block; }

    </style>
  </head>

  <body>

    <Header />

    <section class="hero">
      <div class="container">
        <img src="/assets/wordchainx-icon.jpg" alt="Word Chain X Logo" class="app-icon" />
        
        <h1>Connect the Words.<br/>Break the Chain.</h1>
        <p class="kicker">
          The next evolution of word puzzles. <br/>Challenge your vocabulary, hit multipliers, and climb the global ranks.
        </p>

        <a href="https://apps.apple.com/us/app/word-chain-x" class="btn-download" target="_blank">
          <img src="/assets/appstore.png" alt="Download on App Store" />
        </a>
      </div>
    </section>

    <main class="container features-section">
      {sections.map((s, i) => (
        <div class={`feature-row ${i % 2 !== 0 ? 'reverse' : ''}`}>
          
          <div class="text-col">
            <div class="caption">{s.caption}</div>
            <h3>{s.title}</h3>
            <p>{s.text}</p>
            {s.tags && (
              <div class="bullets">
                {s.tags.map(t => <span class="chip">{t}</span>)}
              </div>
            )}
          </div>

          <div class="img-col">
            <div class="device-frame">
              <img src={s.img} alt={s.title} loading="lazy" />
            </div>
          </div>

        </div>
      ))}
    </main>

    <Footer />
  </body>
</html>