---
import Header from "../components/company/CompanyHeader.astro";
import Footer from "../components/company/CompanyFooter.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ashak Studios | Next Gen Mobile Gaming</title>
    <meta name="description" content="Ashak Studios — Fun and accessible games on mobile." />
    <meta name="theme-color" content="#8D46E7" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;500;700&family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <style>
      /* --- CORE VARIABLES & RESET --- */
      :root {
        --bg-dark: #030304;
        --accent-primary: #8D46E7;
        --accent-secondary: #5A41E3;
        --accent-glow: #bd00ff;
        --text-main: #ffffff;
        --text-muted: #9ca3af;
        --card-bg: rgba(20, 20, 28, 0.6);
        --card-border: rgba(255, 255, 255, 0.08);
        --glass-highlight: rgba(255, 255, 255, 0.05);
        --radius: 24px;
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--bg-dark);
        color: var(--text-main);
        font-family: 'Inter', sans-serif; /* Okunabilirlik için gövde Inter */
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
      }

      h1, h2, h3, .brand-font {
        font-family: 'Pixelify Sans', sans-serif;
      }

      /* --- DYNAMIC BACKGROUND --- */
      .background-fx {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
        background: radial-gradient(circle at 50% 0%, #1a112c 0%, #030304 60%);
        overflow: hidden;
      }
      .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: floatOrb 10s infinite alternate ease-in-out;
      }
      .orb-1 { width: 400px; height: 400px; background: var(--accent-primary); top: -10%; left: -10%; }
      .orb-2 { width: 300px; height: 300px; background: var(--accent-secondary); bottom: 20%; right: -5%; animation-delay: -5s; }

      @keyframes floatOrb {
        0% { transform: translate(0, 0); }
        100% { transform: translate(30px, 50px); }
      }

      /* --- LAYOUT UTILS --- */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
        position: relative;
        z-index: 2;
      }

      /* --- HERO SECTION --- */
      .hero {
        padding: 140px 0 80px;
        text-align: center;
        position: relative;
      }
      
      .hero-badge {
        display: inline-flex;
        align-items: center;
        padding: 6px 16px;
        border-radius: 100px;
        background: rgba(141, 70, 231, 0.15);
        border: 1px solid rgba(141, 70, 231, 0.3);
        color: #cbb0ff;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 24px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 20px rgba(141, 70, 231, 0.2);
      }

      .hero h1 {
        font-size: clamp(48px, 8vw, 96px);
        line-height: 0.9;
        margin: 0;
        background: linear-gradient(180deg, #fff 0%, #a5a5a5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 40px rgba(141, 70, 231, 0.3);
        letter-spacing: -2px;
      }

      .hero p {
        font-size: clamp(18px, 2vw, 22px);
        color: var(--text-muted);
        max-width: 600px;
        margin: 24px auto 40px;
        line-height: 1.6;
      }

      /* --- TABS / TOGGLE (Modern Switch) --- */
      .nav-pill-container {
        display: inline-flex;
        background: rgba(255,255,255,0.05);
        padding: 6px;
        border-radius: 100px;
        border: 1px solid var(--card-border);
        backdrop-filter: blur(10px);
        position: relative;
        margin-bottom: 60px;
      }
      .nav-pill {
        position: relative;
        z-index: 2;
        padding: 10px 32px;
        border-radius: 100px;
        color: var(--text-muted);
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
        cursor: pointer;
        font-size: 15px;
      }
      .nav-pill.active {
        color: #fff;
        text-shadow: 0 0 10px rgba(255,255,255,0.5);
      }
      /* Sliding background for tabs */
      .pill-bg {
        position: absolute;
        top: 6px; left: 6px;
        height: calc(100% - 12px);
        background: var(--accent-primary);
        border-radius: 100px;
        width: 0; /* JS ile set edilecek */
        transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        box-shadow: 0 4px 20px rgba(141, 70, 231, 0.5);
      }

      /* --- BENTO GRID (APPS) --- */
      .bento-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        gap: 24px;
        perspective: 1000px;
      }

      .game-card {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: var(--radius);
        padding: 32px;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        /* Glass effect */
        backdrop-filter: blur(20px);
      }

      /* Hover States */
      .game-card:hover {
        transform: translateY(-8px) scale(1.01);
        border-color: rgba(141, 70, 231, 0.5);
        box-shadow: 0 20px 50px -10px rgba(141, 70, 231, 0.25);
      }
      
      /* Inner Glow Gradient */
      .game-card::before {
        content:'';
        position: absolute;
        top:0; left:0; right:0; height: 200px;
        background: linear-gradient(180deg, rgba(255,255,255,0.03), transparent);
        pointer-events: none;
      }

      .game-header {
        display: flex;
        align-items: flex-start;
        gap: 20px;
        width: 100%;
        margin-bottom: 20px;
      }

      .game-icon {
        width: 72px; height: 72px;
        border-radius: 18px;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,0.1);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
      }

      .game-info h3 {
        font-size: 24px;
        margin: 0 0 6px 0;
        color: #fff;
      }
      .tag {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #a5a5a5;
        border: 1px solid #333;
        padding: 2px 8px;
        border-radius: 6px;
        background: rgba(0,0,0,0.3);
      }

      .game-desc {
        font-size: 15px;
        color: #b0b0c0;
        line-height: 1.6;
        margin-bottom: 24px;
        flex-grow: 1;
      }

      /* Action Buttons */
      .actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        width: 100%;
        margin-top: auto;
      }

      .btn-game {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 44px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.2s;
        cursor: pointer;
      }

      .btn-details {
        background: #fff;
        color: #000;
        border: 1px solid #fff;
      }
      .btn-details:hover {
        background: #e0e0e0;
        box-shadow: 0 0 15px rgba(255,255,255,0.4);
      }

      .btn-store {
        background: rgba(255,255,255,0.05);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
      }
      .btn-store:hover {
        background: rgba(255,255,255,0.1);
        border-color: #fff;
      }

      /* --- ABOUT SECTION (Styled as a 'Terminal' / Data block) --- */
      .about-section {
        display: none; /* JS toggles this */
        animation: fadeIn 0.5s ease;
      }

      .about-grid {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 30px;
      }
      @media (max-width: 900px) { .about-grid { grid-template-columns: 1fr; } }

      .about-card {
        background: linear-gradient(145deg, #101016, #0a0a0e);
        border: 1px solid var(--card-border);
        border-radius: var(--radius);
        padding: 40px;
        position: relative;
      }
      .about-card h2 {
        font-size: 32px;
        margin-top: 0;
        color: var(--accent-primary);
        margin-bottom: 24px;
      }
      .about-card p {
        color: #cccccc;
        line-height: 1.8;
        font-size: 17px;
        margin-bottom: 20px;
      }
      .stat-row {
        display: flex;
        gap: 40px;
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid rgba(255,255,255,0.05);
      }
      .stat h4 { font-size: 36px; margin: 0; color: #fff; }
      .stat span { font-size: 13px; color: var(--text-muted); text-transform: uppercase; letter-spacing: 1px; }

      /* --- ANIMATIONS --- */
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .reveal {
        animation: fadeIn 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        opacity: 0;
      }
      .reveal:nth-child(1) { animation-delay: 0.1s; }
      .reveal:nth-child(2) { animation-delay: 0.2s; }
      .reveal:nth-child(3) { animation-delay: 0.3s; }
      .reveal:nth-child(4) { animation-delay: 0.4s; }

      .hidden { display: none !important; }

      /* Responsive Tweaks */
      @media (max-width: 600px) {
        .bento-grid { grid-template-columns: 1fr; }
        .hero h1 { font-size: 48px; }
        .game-card { padding: 24px; }
      }
    </style>
  </head>
  <body>

    <!-- Animated BG -->
    <div class="background-fx">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
    </div>

    <Header />

    <main class="container">
      
      <!-- HERO -->
      <section class="hero">
        <div class="hero-badge reveal">EST. 2024 • WORLDWIDE</div>
        <h1 class="reveal">ASHAK STUDIOS</h1>
        <p class="reveal">
          We craft digital experiences that defy expectations. 
          Fun, accessible, and visually stunning games for the modern era.
        </p>

        <!-- Custom Tab Switcher -->
        <div class="nav-pill-container reveal" role="tablist">
          <div class="pill-bg" id="pill-bg"></div>
          <a id="tab-apps" class="nav-pill active" onclick="switchTab('apps')">Projects</a>
          <a id="tab-about" class="nav-pill" onclick="switchTab('about')">Studio</a>
        </div>
      </section>

      <!-- APPS GRID -->
      <div id="apps-view" class="bento-grid reveal">
        
        <!-- Card 1 -->
        <article class="game-card">
          <div class="game-header">
            <img class="game-icon" src="/assets/maxontheislandlogo.png" alt="Icon" />
            <div class="game-info">
              <span class="tag">Adventure</span>
              <h3>Max On The Island</h3>
            </div>
          </div>
          <p class="game-desc">
            An immersive puzzle escape. Navigate the mysterious island, solve intricate mechanisms, and find your way home.
          </p>
          <div class="actions">
            <a href="/maxontheisland" class="btn-game btn-details">Explore</a>
            <a href="/maxontheisland#stores" class="btn-game btn-store">Get App</a>
          </div>
        </article>

        <!-- Card 2 -->
        <article class="game-card">
          <div class="game-header">
            <img class="game-icon" src="/assets/max-on-the-space-icon.png" alt="Icon" />
            <div class="game-info">
              <span class="tag">Sci-Fi</span>
              <h3>Max On The Space</h3>
            </div>
          </div>
          <p class="game-desc">
            Zero gravity puzzles. Travel through the cosmos, repair your ship, and discover alien artifacts.
          </p>
          <div class="actions">
            <a href="/maxonthespace" class="btn-game btn-details">Explore</a>
            <a href="/maxonthespace#stores" class="btn-game btn-store">Get App</a>
          </div>
        </article>

        <!-- Card 3 -->
        <article class="game-card">
          <div class="game-header">
            <img class="game-icon" src="/assets/imposterx-icon.jpg" alt="Icon" />
            <div class="game-info">
              <span class="tag">Social</span>
              <h3>ImposterX</h3>
            </div>
          </div>
          <p class="game-desc">
            Trust no one. A game of deception and deduction. Outsmart the crew before it's too late.
          </p>
          <div class="actions">
            <a href="/imposterx" class="btn-game btn-details">Explore</a>
            <a href="/imposterx#stores" class="btn-game btn-store">Get App</a>
          </div>
        </article>

        <!-- Card 4 -->
        <article class="game-card">
          <div class="game-header">
            <img class="game-icon" src="/assets/cityguessr-icon.png" alt="Icon" />
            <div class="game-info">
              <span class="tag">Trivia</span>
              <h3>CityGuessr</h3>
            </div>
          </div>
          <p class="game-desc">
            Travel the world from your phone. Guess the city based on street views and famous landmarks.
          </p>
          <div class="actions">
            <a href="/cityguessr" class="btn-game btn-details">Explore</a>
            <a href="/cityguessr#stores" class="btn-game btn-store">Get App</a>
          </div>
        </article>

        <!-- Card 5 -->
        <article class="game-card">
          <div class="game-header">
            <img class="game-icon" src="/assets/countryguessr-icon.png" alt="Icon" />
            <div class="game-info">
              <span class="tag">Educational</span>
              <h3>CountryGuessr</h3>
            </div>
          </div>
          <p class="game-desc">
            Test your geography skills. Identify countries from maps, flags, and cultural clues.
          </p>
          <div class="actions">
            <a href="/countryguessr" class="btn-game btn-details">Explore</a>
            <a href="/countryguessr#stores" class="btn-game btn-store">Get App</a>
          </div>
        </article>

      </div>

      <!-- ABOUT SECTION -->
      <div id="about-view" class="about-section">
        <div class="about-grid">
          
          <div class="about-card">
            <h2>We Build Legacies.</h2>
            <p>
              Ashak Studios isn't just a game developer; we are architects of digital joy. 
              We believe in the power of consistency, simplicity, and impeccable craftsmanship.
            </p>
            <p>
              In an industry of noise, we choose clarity. Every pixel is placed with purpose, 
              every mechanic tuned for satisfaction. We respect our players' time by delivering 
              experiences that are polished, fair, and genuinely fun.
            </p>
            
            <div class="stat-row">
              <div class="stat">
                <h4 class="brand-font">5+</h4>
                <span>Games Released</span>
              </div>
              <div class="stat">
                <h4 class="brand-font">Global</h4>
                <span>Player Base</span>
              </div>
            </div>
          </div>

          <div class="about-card" style="border-color: var(--accent-primary);">
            <h3 style="color:#fff; margin-top:0;">Our Manifesto</h3>
            <p style="font-size:15px; color:var(--text-muted);">
              We don't chase trends. We chase quality. From the first line of code to the final release, our process is disciplined and our vision is clear.
            </p>
            <br/>
            <h3 style="color:#fff; margin-top:0;">The Vision</h3>
            <p style="font-size:15px; color:var(--text-muted);">
              To create a portfolio that stands the test of time. Games that you keep installed because they just feel right.
            </p>
          </div>

        </div>
      </div>

    </main>

    <Footer />

    <script is:inline>
      // Basit Tab Değiştirme Mantığı
      const pillBg = document.getElementById('pill-bg');
      const tabApps = document.getElementById('tab-apps');
      const tabAbout = document.getElementById('tab-about');
      const viewApps = document.getElementById('apps-view');
      const viewAbout = document.getElementById('about-view');

      function updatePill(activeTabElement) {
        pillBg.style.width = activeTabElement.offsetWidth + 'px';
        pillBg.style.left = activeTabElement.offsetLeft + 'px';
      }

      function switchTab(tabName) {
        if (tabName === 'apps') {
          tabApps.classList.add('active');
          tabAbout.classList.remove('active');
          viewApps.classList.remove('hidden');
          viewAbout.classList.add('hidden');
          viewAbout.style.display = 'none'; // force hide
          viewApps.style.display = 'grid'; // force show grid
          updatePill(tabApps);
        } else {
          tabAbout.classList.add('active');
          tabApps.classList.remove('active');
          viewApps.classList.add('hidden');
          viewApps.style.display = 'none';
          viewAbout.classList.remove('hidden');
          viewAbout.style.display = 'block';
          updatePill(tabAbout);
        }
      }

      // İlk Yükleme Ayarı
      window.addEventListener('load', () => {
        updatePill(tabApps);
        // URL Hash kontrolü
        if(window.location.hash === '#about') {
          switchTab('about');
        }
      });

      // Resize'da pill pozisyonunu düzelt
      window.addEventListener('resize', () => {
        const active = document.querySelector('.nav-pill.active');
        if(active) updatePill(active);
      });
    </script>
  </body>
</html>