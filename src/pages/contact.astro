---
import Header from "../components/company/CompanyHeader.astro";
import Footer from "../components/company/CompanyFooter.astro";

const SUPPORT_EMAIL = "contact@ashak.co";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact • Ashak Studios</title>
    <meta name="description" content="Get in touch with the Ashak Studios team." />
    <meta name="theme-color" content="#8D46E7" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;500;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
      /* --- CORE VARIABLES & RESET --- */
      :root {
        --bg-dark: #030304;
        --accent-primary: #8D46E7;
        --accent-secondary: #5A41E3;
        --text-main: #ffffff;
        --text-muted: #9ca3af;
        --card-bg: rgba(20, 20, 28, 0.6);
        --card-border: rgba(255, 255, 255, 0.08);
        --input-bg: rgba(0, 0, 0, 0.3);
        --radius: 24px;
      }

      * { box-sizing: border-box; }
      
      body {
        margin: 0;
        background-color: var(--bg-dark);
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
      }

      h1, h2, h3, .brand-font {
        font-family: 'Pixelify Sans', sans-serif;
      }

      /* --- ANIMATED BACKGROUND --- */
      .background-fx {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
        background: radial-gradient(circle at 50% 0%, #1a112c 0%, #030304 70%);
        overflow: hidden;
      }
      .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(90px);
        opacity: 0.35;
        animation: floatOrb 12s infinite alternate ease-in-out;
      }
      .orb-1 { width: 500px; height: 500px; background: var(--accent-primary); top: -10%; left: -20%; }
      .orb-2 { width: 300px; height: 300px; background: var(--accent-secondary); bottom: 10%; right: -10%; animation-delay: -4s; }

      @keyframes floatOrb {
        0% { transform: translate(0, 0); }
        100% { transform: translate(30px, 50px); }
      }

      /* --- LAYOUT --- */
      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 24px;
        position: relative;
        z-index: 2;
      }

      .hero {
        padding: 140px 0 60px;
        text-align: center;
      }

      .hero h1 {
        font-size: clamp(48px, 6vw, 80px);
        margin: 0;
        background: linear-gradient(180deg, #fff 0%, #a5a5a5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 40px rgba(141, 70, 231, 0.3);
      }
      
      .hero p {
        color: var(--text-muted);
        font-size: 18px;
        margin-top: 16px;
      }

      /* --- GRID LAYOUT --- */
      .contact-grid {
        display: grid;
        grid-template-columns: 1.4fr 0.8fr;
        gap: 24px;
        margin-bottom: 80px;
      }
      @media(max-width: 900px) { .contact-grid { grid-template-columns: 1fr; } }

      /* --- CARDS (Glass Panels) --- */
      .glass-panel {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: var(--radius);
        padding: 40px;
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 50px -10px rgba(0,0,0,0.5);
        animation: fadeIn 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        opacity: 0;
        transform: translateY(20px);
      }
      .glass-panel:nth-child(2) { animation-delay: 0.2s; }

      @keyframes fadeIn { to { opacity: 1; transform: translateY(0); } }

      /* --- FORM STYLING --- */
      .form-header { margin-bottom: 30px; }
      .form-header h2 { font-size: 32px; margin: 0 0 8px 0; color: #fff; }
      .form-header p { margin: 0; color: var(--text-muted); font-size: 14px; }

      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
      }
      @media(max-width: 600px) { .form-row { grid-template-columns: 1fr; } }

      .input-group { margin-bottom: 20px; }
      
      label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #d1d5db;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      input, textarea {
        width: 100%;
        background: var(--input-bg);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 12px;
        padding: 16px;
        color: #fff;
        font-family: 'Inter', sans-serif;
        font-size: 15px;
        transition: all 0.3s ease;
      }
      
      input:focus, textarea:focus {
        outline: none;
        border-color: var(--accent-primary);
        background: rgba(141, 70, 231, 0.05);
        box-shadow: 0 0 15px rgba(141, 70, 231, 0.2);
      }
      
      textarea { min-height: 160px; resize: vertical; }

      /* BUTTONS */
      .btn-container {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-top: 10px;
        flex-wrap: wrap;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 48px;
        padding: 0 24px;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 15px;
        border: none;
      }

      .btn-primary {
        background: linear-gradient(180deg, #795CFF, #5A41E3);
        color: #fff;
        box-shadow: 0 4px 20px rgba(109,86,249,0.4);
        border: 1px solid #795CFF;
      }
      .btn-primary:hover {
        filter: brightness(1.1);
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(109,86,249,0.6);
      }

      .btn-ghost {
        background: rgba(255,255,255,0.05);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
      }
      .btn-ghost:hover {
        background: rgba(255,255,255,0.1);
        border-color: #fff;
      }

      /* --- SIDEBAR INFO --- */
      .info-block { margin-bottom: 32px; }
      .info-block h3 { 
        font-size: 18px; 
        margin: 0 0 12px 0; 
        color: var(--accent-primary); 
        text-transform: uppercase;
        letter-spacing: 1px;
      }
      
      .info-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .info-list li {
        margin-bottom: 12px;
        color: #e5e7eb;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .info-list a {
        color: #fff;
        text-decoration: none;
        border-bottom: 1px dotted #666;
        transition: .2s;
      }
      .info-list a:hover { color: var(--accent-primary); border-color: var(--accent-primary); }

      .social-icons {
        display: flex;
        gap: 12px;
      }
      .social-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px; height: 40px;
        border-radius: 10px;
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.1);
        color: #fff;
        transition: .3s;
      }
      .social-btn:hover {
        background: var(--accent-primary);
        border-color: var(--accent-primary);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(141, 70, 231, 0.4);
      }

      /* --- TOAST --- */
      .toast {
        position: fixed;
        bottom: 30px; left: 50%;
        transform: translateX(-50%) translateY(50px);
        background: rgba(15, 16, 22, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid var(--accent-primary);
        color: #fff;
        padding: 12px 24px;
        border-radius: 100px;
        font-size: 14px;
        font-weight: 500;
        box-shadow: 0 10px 40px rgba(0,0,0,0.6);
        opacity: 0;
        pointer-events: none;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        z-index: 100;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .toast.show { opacity: 1; transform: translateX(-50%) translateY(0); }
      .toast::before {
        content:'';
        display:block; width:8px; height:8px; background:#00ff88; border-radius:50%;
        box-shadow: 0 0 10px #00ff88;
      }

    </style>
  </head>
  <body>

    <!-- Background FX -->
    <div class="background-fx">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
    </div>

    <Header />

    <main class="container">
      
      <section class="hero">
        <h1 class="reveal">CONTACT US</h1>
        <p class="reveal">Have a question or an app idea? The channel is open.</p>
      </section>

      <div class="contact-grid">
        
        <!-- Left: Interactive Form -->
        <div class="glass-panel form-prose">
          <div class="form-header">
            <h2>Send Message</h2>
            <p>No account needed. We'll launch your default mail app.</p>
          </div>

          <form id="contact-form" onsubmit="return handleSubmit(event)">
            <div class="form-row">
              <div class="input-group">
                <label for="name">Pilot Name</label>
                <input id="name" name="name" type="text" autocomplete="name" placeholder="e.g. Alex Ray" required />
              </div>
              <div class="input-group">
                <label for="email">Comm Frequency (Email)</label>
                <input id="email" name="email" type="email" autocomplete="email" placeholder="you@email.com" required />
              </div>
            </div>

            <div class="input-group">
              <label for="subject">Mission / Subject</label>
              <input id="subject" name="subject" type="text" placeholder="Support, Bug Report, or just Hello" />
            </div>

            <div class="input-group">
              <label for="message">Transmission</label>
              <textarea id="message" name="message" placeholder="Write your message here..." required></textarea>
            </div>

            <div class="btn-container">
              <button class="btn btn-primary" type="submit">Transmit</button>
              <a class="btn btn-ghost" href={`mailto:${SUPPORT_EMAIL}`} title="Open email app">Direct Link</a>
              <button class="btn btn-ghost" type="button" onclick="copyEmail()">Copy Addr</button>
            </div>
            <p style="font-size:12px; color:var(--text-muted); margin-top:16px;">
              * Response time: typically 24-48 hours.
            </p>
          </form>
        </div>

        <!-- Right: Sidebar Info -->
        <aside class="glass-panel">
          <div class="info-block">
            <h3>Direct Line</h3>
            <ul class="info-list">
              <li>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                <a href={`mailto:${SUPPORT_EMAIL}`}>{SUPPORT_EMAIL}</a>
              </li>
              <li>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
                <span>Worldwide (Remote)</span>
              </li>
            </ul>
          </div>

          <div class="info-block">
            <h3>Social Uplink</h3>
            <div class="social-icons">
              <a href="https://www.instagram.com/ashak.co/" class="social-btn" aria-label="Instagram" target="_blank">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><circle cx="17.5" cy="6.5" r="1.25"></circle></svg>
              </a>
              <a href="https://www.youtube.com/@ashakstudios" class="social-btn" aria-label="YouTube" target="_blank">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23.5 6.2a3 3 0 0 0-2.1-2.1C19.3 3.5 12 3.5 12 3.5s-7.3 0-9.4.6A3 3 0 0 0 .5 6.2 31 31 0 0 0 0 12a31 31 0 0 0 .6 5.8 3 3 0 0 0 2.1 2.1c2.2.6 9.3.6 9.3.6s7.3 0 9.4-.6a3 3 0 0 0 2.1-2.1 31 31 0 0 0 .5-5.8 31 31 0 0 0-.6-5.8ZM9.8 15.3V8.7L15.7 12z"/></svg>
              </a>
            </div>
          </div>

          <div class="info-block" style="margin-bottom:0; border-top:1px solid rgba(255,255,255,0.1); padding-top:20px;">
            <h3>Support Tips</h3>
            <ul class="info-list" style="font-size:14px; line-height:1.6; color:#9ca3af;">
              <li>• Check spam folder for replies.</li>
              <li>• Include device model for bugs.</li>
              <li>• Purchases restored in Settings.</li>
            </ul>
          </div>
        </aside>
      </div>
    </main>

    <Footer />

    <!-- Toast Notifications -->
    <div id="toast" class="toast" role="status" aria-live="polite">Initiating email client...</div>
    <div id="toast-copy" class="toast" role="status" aria-live="polite">Coordinates copied!</div>

    <script is:inline define:vars={{ SUPPORT_EMAIL }}>
      function handleSubmit(e){
        e.preventDefault();
        const f = e.target;
        const name = f.name.value.trim();
        const email = f.email.value.trim();
        const subject = f.subject.value.trim() || 'Contact';
        const message = f.message.value.trim();

        const body = `Name: ${name}\nEmail: ${email}\n\n${message}\n\n--\nSent from ashak.co/contact`;

        const mailto = `mailto:${SUPPORT_EMAIL}?subject=${encodeURIComponent('[Contact] ' + subject)}&body=${encodeURIComponent(body)}`;
        window.location.href = mailto;

        showToast('toast');
        return false;
      }

      function copyEmail(){
        navigator.clipboard?.writeText(SUPPORT_EMAIL);
        showToast('toast-copy');
      }

      function showToast(id){
        const el = document.getElementById(id);
        if(!el) return;
        el.classList.add('show');
        setTimeout(()=>el.classList.remove('show'), 2600);
      }
    </script>
  </body>
</html>